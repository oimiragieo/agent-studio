{
  "name": "@anthropic-ai/claude-agent-sdk",
  "version": "1.0.0",
  "description": "Enterprise-grade Claude Agent SDK with fine-grained streaming, MCP integration, and advanced security",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tools": {
      "import": "./dist/tools/index.js",
      "types": "./dist/tools/index.d.ts"
    },
    "./mcp": {
      "import": "./dist/mcp/index.js",
      "types": "./dist/mcp/index.d.ts"
    },
    "./streaming": {
      "import": "./dist/streaming/index.js",
      "types": "./dist/streaming/index.d.ts"
    },
    "./permissions": {
      "import": "./dist/permissions/index.js",
      "types": "./dist/permissions/index.d.ts"
    },
    "./prompt-engineering": {
      "import": "./dist/prompt-engineering/index.js",
      "types": "./dist/prompt-engineering/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "zod": "^3.22.4",
    "eventemitter3": "^5.0.1",
    "p-queue": "^8.0.1",
    "json-schema-to-zod": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "claude",
    "anthropic",
    "ai",
    "agent",
    "sdk",
    "llm",
    "tool-use",
    "streaming",
    "mcp",
    "enterprise",
    "fine-grained-streaming",
    "subagents",
    "permissions",
    "security"
  ],
  "author": "Anthropic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anthropics/claude-agent-sdk",
    "directory": "packages/core"
  }
}
