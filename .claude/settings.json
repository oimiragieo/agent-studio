{
  "max_tokens": 60000,
  "rag_enabled": true,
  "rag_threshold": 0.7,
  "auto_context_pruning": true,
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/routing/router-mode-reset.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/routing/router-enforcer.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/session/memory-reminder.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/evolution/evolution-trigger-detector.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/memory/memory-health-check.cjs"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/safety/windows-null-sanitizer.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/safety/bash-command-validator.cjs"
          }
        ]
      },
      {
        "matcher": "Glob|Grep|WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/routing/routing-guard.cjs"
          }
        ]
      },
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/safety/file-placement-guard.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/routing/routing-guard.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/safety/tdd-check.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/validation/plan-evolution-guard.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/evolution/unified-evolution-guard.cjs"
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/safety/validate-skill-invocation.cjs"
          }
        ]
      },
      {
        "matcher": "TaskCreate",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/routing/routing-guard.cjs"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/routing/agent-context-pre-tracker.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/routing/routing-guard.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/routing/documentation-routing-guard.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/self-healing/loop-prevention.cjs"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/self-healing/anomaly-detector.cjs"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/self-healing/auto-rerouter.cjs"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/memory/format-memory.cjs"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/safety/enforce-claude-md-update.cjs"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/routing/agent-context-tracker.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/memory/extract-workflow-learnings.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/memory/session-memory-extractor.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/routing/task-completion-guard.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/evolution/evolution-audit.cjs"
          }
        ]
      },
      {
        "matcher": "TaskUpdate",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/routing/task-update-tracker.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/reflection/task-completion-reflection.cjs"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/reflection/error-recovery-reflection.cjs"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/memory/session-end-recorder.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/reflection/session-end-reflection.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/reflection/reflection-queue-processor.cjs"
          }
        ]
      }
    ]
  }
}
