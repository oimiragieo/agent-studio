{
  "max_tokens": 60000,
  "rag_enabled": true,
  "rag_threshold": 0.7,
  "auto_context_pruning": true,
  "hooks": {
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "node .claude/hooks/routing/router-enforcer.js"
      }
    ],
    "PreToolUse": [
      {
        "type": "command",
        "command": "node .claude/hooks/safety/tdd-check.js"
      }
    ]
  }
}
