{
  "version": "1.0.0",
  "name": "Standard Plan Rating Rubric",
  "description": "Default rubric for evaluating implementation plans. Plans must score 7/10 or higher to proceed to execution.",
  "minimum_score": 7,
  "dimensions": [
    {
      "name": "completeness",
      "weight": 0.20,
      "description": "All required information present, no gaps",
      "scoring": {
        "9-10": {
          "description": "All requirements explicitly addressed with detailed approach",
          "criteria": [
            "Plan covers all user stories/requirements",
            "Edge cases and error scenarios included",
            "All acceptance criteria addressable"
          ]
        },
        "7-8": {
          "description": "Most requirements addressed, minor gaps acceptable",
          "criteria": [
            "Most requirements covered",
            "Some edge cases may be missing",
            "Acceptance criteria mostly addressable"
          ]
        },
        "5-6": {
          "description": "Some requirements missing or vague",
          "criteria": [
            "Some requirements not explicitly addressed",
            "Edge cases not fully considered",
            "Some acceptance criteria unclear"
          ]
        },
        "1-4": {
          "description": "Major requirements omitted",
          "criteria": [
            "Significant requirements missing",
            "Critical edge cases not addressed",
            "Acceptance criteria not addressable"
          ]
        }
      }
    },
    {
      "name": "feasibility",
      "weight": 0.20,
      "description": "Plan is realistic and achievable",
      "scoring": {
        "9-10": {
          "description": "Technically sound with proven approaches",
          "criteria": [
            "Proposed technologies mature and well-supported",
            "Dependencies available and compatible",
            "Timeline realistic given scope"
          ]
        },
        "7-8": {
          "description": "Feasible but may require research or prototyping",
          "criteria": [
            "Most technologies proven",
            "Some dependencies may need verification",
            "Timeline mostly realistic"
          ]
        },
        "5-6": {
          "description": "Some feasibility concerns",
          "criteria": [
            "Some technologies unproven",
            "Dependencies uncertain",
            "Timeline may be optimistic"
          ]
        },
        "1-4": {
          "description": "Contains infeasible or overly complex approaches",
          "criteria": [
            "Technologies not suitable or unavailable",
            "Dependencies incompatible",
            "Timeline unrealistic"
          ]
        }
      }
    },
    {
      "name": "risk_mitigation",
      "weight": 0.20,
      "description": "Risks identified and mitigation strategies defined",
      "scoring": {
        "9-10": {
          "description": "Risks identified with concrete mitigation strategies",
          "criteria": [
            "Technical risks (performance, security, scalability) identified",
            "Project risks (timeline, dependencies, resource) addressed",
            "Mitigations reduce risk to acceptable levels"
          ]
        },
        "7-8": {
          "description": "Some risks identified, basic mitigation outlined",
          "criteria": [
            "Most technical risks identified",
            "Some project risks addressed",
            "Basic mitigation strategies present"
          ]
        },
        "5-6": {
          "description": "Risks partially addressed",
          "criteria": [
            "Some risks identified but not all",
            "Mitigation strategies vague",
            "Risk levels may be unacceptable"
          ]
        },
        "1-4": {
          "description": "Risks not addressed or mitigation absent",
          "criteria": [
            "Critical risks not identified",
            "No mitigation strategies",
            "High risk levels"
          ]
        }
      }
    },
    {
      "name": "agent_coverage",
      "weight": 0.20,
      "description": "Appropriate agents assigned to each task",
      "scoring": {
        "9-10": {
          "description": "All tasks have optimal agent assignments with clear roles",
          "criteria": [
            "Each task has most specialized agent",
            "Security-sensitive tasks assigned to security-architect",
            "Architecture decisions assigned to architect",
            "Implementation tasks assigned to developer"
          ]
        },
        "7-8": {
          "description": "Agents assigned but some mismatches or gaps",
          "criteria": [
            "Most tasks have appropriate agents",
            "Some assignments may be suboptimal",
            "Roles mostly clear"
          ]
        },
        "5-6": {
          "description": "Agent assignments need improvement",
          "criteria": [
            "Some tasks have mismatched agents",
            "Specialized agents not used where needed",
            "Roles unclear in some cases"
          ]
        },
        "1-4": {
          "description": "Missing agents or significant misassignments",
          "criteria": [
            "Critical tasks lack appropriate agents",
            "Security/architecture tasks not properly assigned",
            "Agent roles unclear or incorrect"
          ]
        }
      }
    },
    {
      "name": "integration",
      "weight": 0.20,
      "description": "Plan integrates properly with existing systems",
      "scoring": {
        "9-10": {
          "description": "Integration points clearly defined and compatible",
          "criteria": [
            "Existing APIs/services properly integrated",
            "Database schema changes backward compatible",
            "Authentication/authorization flows consistent"
          ]
        },
        "7-8": {
          "description": "Integration mostly addressed",
          "criteria": [
            "Most integration points defined",
            "Some compatibility concerns",
            "Basic integration strategy present"
          ]
        },
        "5-6": {
          "description": "Integration needs more detail",
          "criteria": [
            "Some integration points unclear",
            "Compatibility concerns not fully addressed",
            "Integration strategy vague"
          ]
        },
        "1-4": {
          "description": "Integration not addressed or conflicts present",
          "criteria": [
            "Integration points not defined",
            "Compatibility issues not addressed",
            "Conflicts with existing systems"
          ]
        }
      }
    }
  ],
  "thresholds": {
    "emergency": 6,
    "standard": 7,
    "enterprise": 8,
    "critical": 9
  },
  "scoring_rules": {
    "overall_calculation": "weighted_average",
    "rounding": "one_decimal",
    "minimum_passing": 7.0,
    "dimension_weights_sum": 1.0
  }
}
