    "high": {
      "blocking": true,
      "require_signoff": true,
      "notify": ["security-architect"],
      "max_response_time_hours": 8
    },
    "medium": {
      "blocking": false,
      "require_signoff": true,
      "notify": ["security-architect"],
      "max_response_time_hours": 24
    },
    "low": {
      "blocking": false,
      "require_signoff": false,
      "notify": [],
