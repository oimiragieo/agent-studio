{
  "$schema": "../../schemas/a2a-test-scenario.schema.json",
  "scenario_id": "a2a-verify-002",
  "name": "Verify deliverables exist",
  "description": "Verify that post-delegation hook checks deliverable existence",
  "category": "verification-protocol",
  "priority": "P0",
  "tags": ["verification", "deliverables", "post-delegation"],

  "preconditions": {
    "fixtures": [],
    "state": {},
    "environment": {}
  },

  "steps": [
    {
      "step_id": "setup-task-with-missing-deliverable",
      "action": "invoke_posttooluse_hook",
      "input": {
        "hook": "post-delegation-verifier.mjs",
        "tool_name": "Task",
        "tool_input": {
          "task_id": "test-verify-deliverable-001",
          "objective": "Create output file",
          "deliverables": [
            {
              "type": "file",
              "path": ".claude/context/tmp/test-verify/output.json",
              "description": "Output data"
            }
          ]
        },
        "tool_result": {
          "content": "Task completed successfully."
        }
      },
      "expected": {
        "decision": "approve",
        "verification_verdict": "FAIL",
        "deliverables_status": [
          {
            "path": ".claude/context/tmp/test-verify/output.json",
            "exists": false
          }
        ]
      },
      "timeout_ms": 5000
    }
  ],

  "assertions": [
    {
      "type": "hook_decision",
      "target": "steps.setup-task-with-missing-deliverable.result.decision",
      "operator": "equals",
      "expected": "approve"
    },
    {
      "type": "missing_deliverable",
      "target": "steps.setup-task-with-missing-deliverable.result.verification_steps.step3_deliverables.missing",
      "operator": "contains",
      "expected": ".claude/context/tmp/test-verify/output.json"
    },
    {
      "type": "verification_verdict",
      "target": "steps.setup-task-with-missing-deliverable.result.verification_verdict",
      "operator": "equals",
      "expected": "FAIL"
    },
    {
      "type": "error_message",
      "target": "steps.setup-task-with-missing-deliverable.result.errors",
      "operator": "contains",
      "expected": "Deliverable not found"
    }
  ],

  "cleanup": {
    "remove_files": [],
    "restore_state": true
  },

  "metadata": {
    "created_at": "2026-01-16T00:00:00Z",
    "author": "developer",
    "related_hooks": ["post-delegation-verifier.mjs"]
  }
}
