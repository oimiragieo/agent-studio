{
  "$schema": "../../schemas/a2a-test-scenario.schema.json",
  "scenario_id": "a2a-verify-003",
  "name": "Extract agent verdict from output",
  "description": "Verify that post-delegation hook extracts explicit verdict from agent output",
  "category": "verification-protocol",
  "priority": "P1",
  "tags": ["verification", "verdict", "extraction"],

  "preconditions": {
    "fixtures": [],
    "state": {},
    "environment": {}
  },

  "steps": [
    {
      "step_id": "invoke-with-pass-verdict",
      "action": "invoke_posttooluse_hook",
      "input": {
        "hook": "post-delegation-verifier.mjs",
        "tool_name": "Task",
        "tool_input": {
          "task_id": "test-verify-verdict-001",
          "objective": "Complete review"
        },
        "tool_result": {
          "content": "Review completed successfully. All checks passed. Verdict: PASS"
        }
      },
      "expected": {
        "decision": "approve",
        "verification_verdict": "PASS",
        "agent_verdict": "PASS"
      },
      "timeout_ms": 5000
    }
  ],

  "assertions": [
    {
      "type": "hook_decision",
      "target": "steps.invoke-with-pass-verdict.result.decision",
      "operator": "equals",
      "expected": "approve"
    },
    {
      "type": "verdict_extracted",
      "target": "steps.invoke-with-pass-verdict.result.verification_steps.step5_verdict.checked",
      "operator": "equals",
      "expected": true
    },
    {
      "type": "agent_verdict",
      "target": "steps.invoke-with-pass-verdict.result.verification_steps.step5_verdict.agent_verdict",
      "operator": "equals",
      "expected": "PASS"
    },
    {
      "type": "final_verdict",
      "target": "steps.invoke-with-pass-verdict.result.verification_verdict",
      "operator": "equals",
      "expected": "PASS"
    }
  ],

  "cleanup": {
    "remove_files": [],
    "restore_state": true
  },

  "metadata": {
    "created_at": "2026-01-16T00:00:00Z",
    "author": "developer",
    "related_hooks": ["post-delegation-verifier.mjs"]
  }
}
