{
  "$schema": "../../schemas/a2a-test-scenario.schema.json",
  "scenario_id": "a2a-template-005",
  "name": "Allow with missing optimization fields (warn)",
  "description": "Verify that missing optimization fields produce warning but allow",
  "category": "template-enforcement",
  "priority": "P1",
  "tags": ["hook", "allow", "template", "optimization-warning"],

  "preconditions": {
    "fixtures": [],
    "state": {},
    "environment": {}
  },

  "steps": [
    {
      "step_id": "invoke-without-optimizations",
      "action": "invoke_pretooluse_hook",
      "input": {
        "hook": "agent-task-template-enforcer.mjs",
        "tool_name": "Task",
        "tool_input": {
          "task_id": "test-no-opt-001",
          "objective": "Create a simple test file",
          "context": {
            "problem": "Need test coverage",
            "why_now": "PR requirement"
          },
          "deliverables": [
            {
              "type": "file",
              "path": ".claude/context/tmp/test.mjs",
              "description": "Test file"
            }
          ],
          "constraints": {
            "max_time_minutes": 10
          },
          "success_criteria": ["Tests created"],
          "verification": {
            "verification_type": "static",
            "required_tests": [
              {
                "test_name": "syntax-check",
                "command_or_action": "node --check .claude/context/tmp/test.mjs",
                "expected_outcome": "No errors"
              }
            ],
            "passing_criteria": {
              "errors_allowed": 0,
              "tests_passed_minimum": "100%"
            },
            "evidence_required": true
          },
          "assigned_agent": "developer"
        }
      },
      "expected": {
        "decision": "approve"
      },
      "timeout_ms": 5000
    }
  ],

  "assertions": [
    {
      "type": "hook_decision",
      "target": "steps.invoke-without-optimizations.result.decision",
      "operator": "equals",
      "expected": "approve"
    },
    {
      "type": "optimization_warning",
      "target": "steps.invoke-without-optimizations.result.missing_optimizations",
      "operator": "contains",
      "expected": "examples"
    },
    {
      "type": "optimization_warning",
      "target": "steps.invoke-without-optimizations.result.missing_optimizations",
      "operator": "contains",
      "expected": "reasoning_style"
    },
    {
      "type": "stderr_contains_warning",
      "target": "steps.invoke-without-optimizations.stderr",
      "operator": "contains",
      "expected": "optimization"
    }
  ],

  "cleanup": {
    "remove_files": [],
    "restore_state": true
  },

  "metadata": {
