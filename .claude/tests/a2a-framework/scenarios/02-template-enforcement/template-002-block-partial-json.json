{
  "$schema": "../../schemas/a2a-test-scenario.schema.json",
  "scenario_id": "a2a-template-002",
  "name": "Block partial JSON (missing verification)",
  "description": "Verify that partial JSON missing verification field is blocked",
  "category": "template-enforcement",
  "priority": "P0",
  "tags": ["hook", "blocking", "template", "partial-json"],

  "preconditions": {
    "fixtures": ["sample-task-inputs/partial-task-no-verification.json"],
    "state": {},
    "environment": {}
  },

  "steps": [
    {
      "step_id": "invoke-with-partial-json",
      "action": "invoke_pretooluse_hook",
      "input": {
        "hook": "agent-task-template-enforcer.mjs",
        "tool_name": "Task",
        "tool_input": {
          "task_id": "test-partial-001",
          "objective": "Create a test file",
          "context": {
            "problem": "Need test coverage",
            "why_now": "PR requirement"
          },
          "deliverables": [
            {
              "type": "file",
              "path": ".claude/context/tmp/test.mjs",
              "description": "Test file"
            }
          ],
          "constraints": {
            "max_time_minutes": 10
          },
          "success_criteria": ["Tests created"],
          "assigned_agent": "developer"
        }
      },
      "expected": {
        "decision": "block",
        "missing_fields": ["verification"]
      },
      "timeout_ms": 5000
    }
  ],

  "assertions": [
    {
      "type": "hook_decision",
      "target": "steps.invoke-with-partial-json.result.decision",
      "operator": "equals",
      "expected": "block"
    },
    {
      "type": "hook_output",
      "target": "steps.invoke-with-partial-json.result.reason",
      "operator": "contains",
      "expected": "AGENT TASK TEMPLATE VIOLATION"
    },
    {
      "type": "missing_field_detected",
      "target": "steps.invoke-with-partial-json.result.missing_fields",
      "operator": "contains",
      "expected": "verification"
    },
    {
      "type": "guidance_provided",
      "target": "steps.invoke-with-partial-json.result.reason",
      "operator": "contains",
      "expected": "verification"
    }
  ],

  "cleanup": {
    "remove_files": [],
    "restore_state": true
  },

  "metadata": {
    "created_at": "2026-01-16T00:00:00Z",
    "author": "developer",
    "related_hooks": ["agent-task-template-enforcer.mjs"]
  }
}
