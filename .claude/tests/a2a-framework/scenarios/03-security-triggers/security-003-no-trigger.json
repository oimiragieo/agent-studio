{
  "$schema": "../../schemas/a2a-test-scenario.schema.json",
  "scenario_id": "a2a-security-003",
  "name": "No trigger on non-security task",
  "description": "Verify that non-security tasks do not trigger security suggestions",
  "category": "security-trigger",
  "priority": "P1",
  "tags": ["security", "trigger", "negative-test"],

  "preconditions": {
    "fixtures": [],
    "state": {},
    "environment": {}
  },

  "steps": [
    {
      "step_id": "invoke-with-non-security-task",
      "action": "invoke_pretooluse_hook",
      "input": {
        "hook": "security-trigger-auto-spawn.mjs",
        "tool_name": "Task",
        "tool_input": {
          "task_id": "test-ui-001",
          "objective": "Create button component with hover effects",
          "context": {
            "problem": "Need reusable UI button",
            "why_now": "Component library expansion"
          },
          "deliverables": [
            {
              "type": "file",
              "path": ".claude/context/tmp/button.tsx",
              "description": "Button component"
            }
          ],
          "constraints": {
            "max_time_minutes": 10
          },
          "success_criteria": ["Button component created", "Hover effects work"],
          "verification": {
            "verification_type": "static",
            "evidence_required": true
          },
          "assigned_agent": "developer"
        }
      },
      "expected": {
        "decision": "approve"
      },
      "timeout_ms": 5000
    }
  ],

  "assertions": [
    {
      "type": "hook_decision",
      "target": "steps.invoke-with-non-security-task.result.decision",
      "operator": "equals",
      "expected": "approve"
    },
    {
      "type": "no_security_triggers",
      "target": "steps.invoke-with-non-security-task.result.metadata.security_triggers_detected",
      "operator": "equals",
      "expected": 0
    },
    {
      "type": "no_suggestion",
      "target": "steps.invoke-with-non-security-task.result.suggestion",
      "operator": "equals",
      "expected": null
    }
  ],

  "cleanup": {
    "remove_files": [],
    "restore_state": true
  },

  "metadata": {
    "created_at": "2026-01-16T00:00:00Z",
    "author": "developer",
    "related_hooks": ["security-trigger-auto-spawn.mjs"]
  }
}
