{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Automated Implementation Results",
  "description": "Schema for automated implementation results from automated-enterprise-flow",
  "required": ["results_id", "results_date", "status", "tasks_completed", "artifacts_generated"],
  "properties": {
    "results_id": {
      "type": "string",
      "description": "Unique identifier for implementation results"
    },
    "results_date": { "type": "string", "format": "date-time" },
    "executor": { "type": "string" },
    "status": { "type": "string", "enum": ["completed", "partial", "failed", "blocked"] },
    "plan_reference": {
      "type": "string",
      "description": "Reference to the plan being implemented"
    },
    "tasks_completed": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["task_id", "status"],
        "properties": {
          "task_id": { "type": "string" },
          "task_name": { "type": "string" },
          "status": { "type": "string", "enum": ["completed", "partial", "failed", "skipped"] },
          "agent": { "type": "string" },
          "started_at": { "type": "string", "format": "date-time" },
          "completed_at": { "type": "string", "format": "date-time" },
          "duration_ms": { "type": "number" },
          "outputs": { "type": "array", "items": { "type": "string" } },
          "error_message": { "type": "string" }
        }
      }
    },
    "artifacts_generated": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "artifact_path": { "type": "string" },
          "artifact_type": {
            "type": "string",
            "enum": ["code", "config", "documentation", "test", "schema", "other"]
          },
          "generated_by": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" }
        }
      }
    },
    "code_changes": {
      "type": "object",
      "properties": {
        "files_created": { "type": "integer", "minimum": 0 },
        "files_modified": { "type": "integer", "minimum": 0 },
        "files_deleted": { "type": "integer", "minimum": 0 },
        "lines_added": { "type": "integer", "minimum": 0 },
        "lines_removed": { "type": "integer", "minimum": 0 },
        "file_list": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": { "type": "string" },
              "action": { "type": "string", "enum": ["created", "modified", "deleted"] },
              "lines_changed": { "type": "integer" }
            }
          }
        }
      }
    },
    "test_results": {
      "type": "object",
      "properties": {
        "tests_run": { "type": "integer", "minimum": 0 },
        "tests_passed": { "type": "integer", "minimum": 0 },
        "tests_failed": { "type": "integer", "minimum": 0 },
        "coverage": { "type": "number", "minimum": 0, "maximum": 100 }
      }
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "added": { "type": "array", "items": { "type": "string" } },
        "updated": { "type": "array", "items": { "type": "string" } },
        "removed": { "type": "array", "items": { "type": "string" } }
      }
    },
    "issues_encountered": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "issue": { "type": "string" },
          "severity": { "type": "string", "enum": ["critical", "high", "medium", "low"] },
          "resolution": { "type": "string" },
          "resolved": { "type": "boolean" }
        }
      }
    },
    "next_steps": { "type": "array", "items": { "type": "string" } },
    "recommendations": { "type": "array", "items": { "type": "string" } }
  }
}
