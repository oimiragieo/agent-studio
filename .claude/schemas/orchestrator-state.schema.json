{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Orchestrator State Schema",
  "description": "Schema for orchestrator handoff package and session state",
  "type": "object",
  "required": ["previousSessionId", "newSessionId", "projectName", "createdAt", "projectState"],
  "properties": {
    "previousSessionId": {
      "type": "string",
      "description": "ID of the previous orchestrator session"
    },
    "newSessionId": {
      "type": "string",
      "description": "ID of the new orchestrator session"
    },
    "projectName": {
      "type": "string",
      "description": "Name of the project being orchestrated"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when handoff package was created"
    },
    "currentPhase": {
      "type": ["string", "null"],
      "description": "Current phase of the project (e.g., 'phase-03-implementation')"
    },
    "planFiles": {
      "type": "object",
      "description": "Map of phase names to plan file paths",
      "additionalProperties": {
        "type": "string",
        "description": "Relative path to plan.md file"
      }
    },
    "claudeMdFiles": {
      "type": "array",
      "description": "Array of CLAUDE.md file paths",
      "items": {
        "type": "string",
        "description": "Relative path to CLAUDE.md file"
      }
    },
    "artifacts": {
      "type": "array",
      "description": "Array of artifact file paths",
      "items": {
        "type": "string",
        "description": "Relative path to artifact file"
      }
    },
    "memoryFiles": {
      "type": "array",
      "description": "Array of memory file paths",
      "items": {
        "type": "string",
        "description": "Relative path to memory file"
      }
    },
    "projectState": {
      "type": "object",
      "required": ["currentStep", "completedTasks", "pendingTasks"],
      "properties": {
        "currentStep": {
          "type": "integer",
          "description": "Current workflow step number",
          "minimum": 0
        },
        "completedTasks": {
          "type": "array",
          "description": "List of completed task descriptions",
          "items": {
            "type": "string"
          }
        },
        "pendingTasks": {
          "type": "array",
          "description": "List of pending task descriptions",
          "items": {
            "type": "string"
          }
        },
        "contextSummary": {
          "type": "string",
          "description": "Summary of current project context for handoff"
        }
      }
    }
  }
}
