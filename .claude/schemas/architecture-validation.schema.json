{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Architecture Validation",
  "description": "Schema for architecture validation artifact",
  "type": "object",
  "required": ["architecture_id", "validation_status", "findings", "created_at"],
  "properties": {
    "architecture_id": {
      "type": "string",
      "description": "ID of architecture being validated"
    },
    "validation_status": {
      "type": "string",
      "enum": ["approved", "needs_revision", "rejected"],
      "description": "Overall validation status"
    },
    "findings": {
      "type": "array",
      "description": "Validation findings",
      "items": {
        "type": "object",
        "required": ["type", "severity", "description"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["strength", "concern", "risk", "recommendation"]
          },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          },
          "description": {
            "type": "string"
          },
          "component": {
            "type": "string",
            "description": "Architecture component this finding relates to"
          }
        }
      }
    },
    "recommendations": {
      "type": "array",
      "description": "Recommendations for improvement",
      "items": {
        "type": "string"
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}

