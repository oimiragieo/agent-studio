{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://llm-rules.com/schemas/security-signoff.schema.json",
  "title": "Security Signoff",
  "description": "Security signoff artifact for vulnerability assessment, threat modeling, and security controls",
  "type": "object",
  "required": [
    "workflow_id",
    "signoff_agent",
    "timestamp",
    "verdict",
    "vulnerabilities_found",
    "critical_vulnerabilities",
    "security_review_complete",
    "threat_model_verified"
  ],
  "properties": {
    "workflow_id": {
      "type": "string",
      "description": "Unique identifier for the workflow",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "signoff_agent": {
      "type": "string",
      "description": "Agent providing the signoff",
      "enum": ["security-architect"]
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of signoff",
      "format": "date-time"
    },
    "verdict": {
      "type": "string",
      "description": "Final security verdict",
      "enum": ["approved", "approved_with_conditions", "rejected"]
    },
    "vulnerabilities_found": {
      "type": "array",
      "description": "List of security vulnerabilities found",
      "items": {
        "type": "object",
        "required": ["severity", "category", "description", "status"],
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low", "info"]
          },
          "category": {
            "type": "string",
            "enum": [
              "injection",
              "broken_authentication",
              "sensitive_data_exposure",
              "xml_external_entities",
              "broken_access_control",
              "security_misconfiguration",
              "xss",
              "insecure_deserialization",
              "using_components_with_known_vulnerabilities",
              "insufficient_logging_monitoring",
              "csrf",
              "ssrf",
              "cryptographic_failures",
              "other"
            ]
          },
          "description": {
            "type": "string",
            "minLength": 20
          },
          "location": {
            "type": "string",
            "description": "File, component, or endpoint where vulnerability exists"
          },
          "status": {
            "type": "string",
            "enum": ["open", "fixed", "mitigated", "accepted_risk", "false_positive"]
          },
          "cve_id": {
            "type": "string",
            "description": "CVE identifier if applicable",
            "pattern": "^CVE-[0-9]{4}-[0-9]+$"
          },
          "cvss_score": {
            "type": "number",
            "description": "CVSS score (0-10)",
            "minimum": 0,
            "maximum": 10
          },
          "remediation": {
            "type": "string",
            "description": "Recommended remediation steps"
          }
        }
      }
    },
    "critical_vulnerabilities": {
      "type": "integer",
      "description": "Count of critical severity vulnerabilities",
      "minimum": 0
    },
    "security_review_complete": {
      "type": "boolean",
      "description": "Whether comprehensive security review was completed"
    },
    "threat_model_verified": {
      "type": "boolean",
      "description": "Whether threat model was reviewed and verified"
    },
    "security_controls": {
      "type": "object",
      "description": "Security controls assessment",
      "properties": {
        "authentication": {
          "type": "object",
          "properties": {
            "implemented": {
              "type": "boolean"
            },
            "strength": {
              "type": "string",
              "enum": ["strong", "adequate", "weak", "none"]
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "authorization": {
          "type": "object",
          "properties": {
            "implemented": {
              "type": "boolean"
            },
            "strength": {
              "type": "string",
              "enum": ["strong", "adequate", "weak", "none"]
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "data_protection": {
          "type": "object",
          "properties": {
            "encryption_at_rest": {
              "type": "boolean"
            },
            "encryption_in_transit": {
              "type": "boolean"
            },
            "strength": {
              "type": "string",
              "enum": ["strong", "adequate", "weak", "none"]
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "input_validation": {
          "type": "object",
          "properties": {
            "implemented": {
              "type": "boolean"
            },
            "coverage": {
              "type": "string",
              "enum": ["comprehensive", "partial", "minimal", "none"]
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "secrets_management": {
          "type": "object",
          "properties": {
            "implemented": {
              "type": "boolean"
            },
            "strength": {
              "type": "string",
              "enum": ["strong", "adequate", "weak", "none"]
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "threat_model_summary": {
      "type": "object",
      "description": "Summary of threat model review",
      "properties": {
        "threats_identified": {
          "type": "integer",
          "minimum": 0
        },
        "threats_mitigated": {
          "type": "integer",
          "minimum": 0
        },
        "residual_risks": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["risk", "severity", "mitigation_status"],
            "properties": {
              "risk": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": ["critical", "high", "medium", "low"]
              },
              "mitigation_status": {
                "type": "string",
                "enum": ["mitigated", "partially_mitigated", "accepted", "unmitigated"]
              },
              "justification": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "security_tests_performed": {
      "type": "array",
      "description": "Security tests performed",
      "items": {
        "type": "object",
        "required": ["test_type", "status"],
        "properties": {
          "test_type": {
            "type": "string",
            "enum": [
              "sast",
              "dast",
              "dependency_scan",
              "secret_scan",
              "penetration_test",
              "threat_model_review",
              "manual_code_review",
              "security_architecture_review"
            ]
          },
          "status": {
            "type": "string",
            "enum": ["passed", "failed", "not_run"]
          },
          "findings": {
            "type": "integer",
            "minimum": 0
          },
          "notes": {
            "type": "string"
          }
        }
      }
    },
    "approval_conditions": {
      "type": "array",
      "description": "Conditions for approval (if verdict is approved_with_conditions)",
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "rejection_reasons": {
      "type": "array",
      "description": "Reasons for rejection (if verdict is rejected)",
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "recommendations": {
      "type": "array",
      "description": "Security recommendations",
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "signoff_notes": {
      "type": "string",
      "description": "Additional notes from security architect"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "verdict": {
            "const": "approved_with_conditions"
          }
        }
      },
      "then": {
        "required": ["approval_conditions"]
      }
    },
    {
      "if": {
        "properties": {
          "verdict": {
            "const": "rejected"
          }
        }
      },
      "then": {
        "required": ["rejection_reasons"]
      }
    }
  ]
}
