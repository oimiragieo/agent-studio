{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://claude-code.anthropic.com/schemas/skill-rule-auditor-output.schema.json",
  "title": "Rule Auditor Skill Output Verification",
  "description": "Verifiable output from the rule-auditor skill that proves code compliance analysis occurred",
  "type": "object",
  "required": [
    "skill_name",
    "files_audited",
    "rules_applied",
    "compliance_score",
    "violations_found",
    "timestamp"
  ],
  "properties": {
    "skill_name": {
      "type": "string",
      "const": "rule-auditor",
      "description": "Must be 'rule-auditor' to verify correct skill was used"
    },
    "files_audited": {
      "type": "array",
      "description": "Files analyzed for rule compliance (proof of actual audit)",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["path", "lines_analyzed"],
        "properties": {
          "path": {
            "type": "string",
            "description": "Absolute file path of audited file"
          },
          "lines_analyzed": {
            "type": "number",
            "minimum": 0,
            "description": "Number of lines analyzed in this file"
          },
          "violations_count": {
            "type": "number",
            "minimum": 0,
            "description": "Number of violations found in this file"
          }
        },
        "additionalProperties": false
      }
    },
    "rules_applied": {
      "type": "array",
      "description": "Rule files used during audit (proves rule loading)",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["rule_path", "rule_name"],
        "properties": {
          "rule_path": {
            "type": "string",
            "description": "Path to rule file"
          },
          "rule_name": {
            "type": "string",
            "description": "Human-readable rule name"
          },
          "violations_found": {
            "type": "number",
            "minimum": 0,
            "description": "Violations for this specific rule"
          }
        },
        "additionalProperties": false
      }
    },
    "compliance_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Overall compliance score (0-100)"
    },
    "violations_found": {
      "type": "array",
      "description": "Detailed violations with locations and fix instructions",
      "items": {
        "type": "object",
        "required": ["file", "line", "rule", "severity", "message"],
        "properties": {
          "file": {
            "type": "string",
            "description": "File containing violation"
          },
          "line": {
            "type": "number",
            "minimum": 1,
            "description": "Line number of violation"
          },
          "column": {
            "type": "number",
            "minimum": 1,
            "description": "Column number of violation"
          },
          "rule": {
            "type": "string",
            "description": "Rule that was violated"
          },
          "severity": {
            "type": "string",
            "enum": ["error", "warning", "info"],
            "description": "Severity level of violation"
          },
          "message": {
            "type": "string",
            "description": "Description of violation"
          },
          "fix_instruction": {
            "type": "string",
            "description": "How to fix this violation"
          },
          "code_snippet": {
            "type": "string",
            "description": "Relevant code snippet showing violation"
          }
        },
        "additionalProperties": false
      }
    },
    "fixes_applied": {
      "type": "array",
      "description": "Fixes applied if --fix flag was used",
      "items": {
        "type": "object",
        "required": ["file", "line", "fix_type"],
        "properties": {
          "file": {
            "type": "string",
            "description": "File where fix was applied"
          },
          "line": {
            "type": "number",
            "description": "Line where fix was applied"
          },
          "fix_type": {
            "type": "string",
            "description": "Type of fix applied"
          },
          "before": {
            "type": "string",
            "description": "Code before fix"
          },
          "after": {
            "type": "string",
            "description": "Code after fix"
          }
        },
        "additionalProperties": false
      }
    },
    "rule_index_consulted": {
      "type": "boolean",
      "description": "Whether rule index was queried for applicable rules"
    },
    "technologies_detected": {
      "type": "array",
      "description": "Technologies detected in audited files",
      "items": {
        "type": "string"
      }
    },
    "audit_summary": {
      "type": "object",
      "description": "Summary statistics of audit",
      "properties": {
        "total_files": {
          "type": "number",
          "minimum": 0
        },
        "total_lines": {
          "type": "number",
          "minimum": 0
        },
        "total_violations": {
          "type": "number",
          "minimum": 0
        },
        "errors": {
          "type": "number",
          "minimum": 0
        },
        "warnings": {
          "type": "number",
          "minimum": 0
        },
        "info": {
          "type": "number",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of audit execution"
    }
  },
  "additionalProperties": false
}
