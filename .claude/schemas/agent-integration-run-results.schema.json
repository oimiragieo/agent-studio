{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Integration Run Results",
  "type": "object",
  "additionalProperties": true,
  "required": ["workflow_id", "started_at", "finished_at", "suite_statuses"],
  "properties": {
    "workflow_id": { "type": "string", "pattern": "^agent-integration-v1-\\d{8}-\\d{6}$" },
    "started_at": { "type": "string", "format": "date-time" },
    "finished_at": { "type": "string", "format": "date-time" },
    "status": { "type": "string", "enum": ["PASS", "FAIL"] },
    "suite_statuses": {
      "type": "object",
      "additionalProperties": true,
      "required": ["test", "tools", "validate", "workflow_dryrun"],
      "properties": {
        "test": { "$ref": "#/definitions/suite_status" },
        "tools": { "$ref": "#/definitions/suite_status" },
        "validate": { "$ref": "#/definitions/suite_status" },
        "workflow_dryrun": { "$ref": "#/definitions/suite_status" }
      }
    },
    "baseline": {
      "type": ["object", "null"],
      "additionalProperties": true,
      "properties": {
        "ok": { "type": ["boolean", "null"] },
        "logs_dir": { "type": "string" },
        "steps": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true,
            "required": ["name", "ok", "exit_code", "log_path"],
            "properties": {
              "key": { "type": "string" },
              "name": { "type": "string" },
              "ok": { "type": "boolean" },
              "exit_code": { "type": "integer" },
              "duration_ms": { "type": "number" },
              "log_path": { "type": "string" }
            }
          }
        },
        "first_failure": {
          "type": ["object", "null"],
          "additionalProperties": true,
          "properties": {
            "name": { "type": "string" },
            "log_path": { "type": ["string", "null"] },
            "exit_code": { "type": ["integer", "null"] }
          }
        }
      }
    },
    "agent_smoke_testing": {
      "type": ["object", "null"],
      "additionalProperties": true,
      "properties": {
        "ok": { "type": "boolean" },
        "workflow_id": { "type": "string" },
        "receipts_directory": { "type": "string" },
        "summary_file": { "type": "string" },
        "total": { "type": "integer" },
        "passed": { "type": "integer" },
        "failed": { "type": "integer" }
      }
    },
    "agent_smoke_receipts_path": { "type": "string" },
    "agent_smoke_receipts": { "type": ["array", "null"] },
    "observability_paths": { "type": ["object", "null"], "additionalProperties": true },
    "observability_bundle": { "type": ["object", "null"], "additionalProperties": true }
  },
  "definitions": {
    "suite_status": {
      "anyOf": [
        {
          "type": "object",
          "additionalProperties": true,
          "required": ["exit_code"],
          "properties": {
            "exit_code": { "type": "integer" }
          }
        },
        { "type": "integer" },
        { "type": "string" },
        { "type": "boolean" },
        { "type": "null" }
      ]
    }
  }
}
