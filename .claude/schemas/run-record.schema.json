{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Run Record",
  "description": "Canonical run record - single source of truth for workflow execution state",
  "required": [
    "run_id",
    "workflow_id",
    "selected_workflow",
    "current_step",
    "status",
    "created_at"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "description": "Unique identifier for this run (e.g., run-<timestamp>-<random>)",
      "pattern": "^run-[a-zA-Z0-9_-]+$"
    },
    "workflow_id": {
      "type": "string",
      "description": "Workflow ID (may be same as run_id or different)",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "selected_workflow": {
      "type": "string",
      "description": "Path to selected workflow YAML file (e.g., .claude/workflows/greenfield-fullstack.yaml)"
    },
    "current_step": {
      "type": "integer",
      "description": "Current step number in workflow execution",
      "minimum": 0
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "in_progress",
        "awaiting_approval",
        "handoff_pending",
        "handed_off",
        "paused",
        "completed",
        "failed",
        "cancelled"
      ],
      "description": "Current status of the run"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when run was created"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when run was last updated"
    },
    "task_queue": {
      "type": "array",
      "description": "Queue of tasks to be executed",
      "items": {
        "type": "object",
        "properties": {
          "task_id": {
            "type": "string"
          },
          "step": {
            "type": "integer"
          },
          "agent": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "in_progress", "completed", "failed", "skipped"]
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["task_id", "step", "agent", "status"]
      }
    },
    "owners": {
      "type": "object",
      "description": "Current owners of the run (orchestrator session, agent assignments)",
      "properties": {
        "orchestrator_session_id": {
          "type": "string"
        },
        "current_agent": {
          "type": "string"
        },
        "assigned_agents": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "timestamps": {
      "type": "object",
      "description": "Key timestamps for the run",
      "properties": {
        "started_at": {
          "type": "string",
          "format": "date-time"
        },
        "last_step_completed_at": {
          "type": "string",
          "format": "date-time"
        },
        "completed_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the run",
      "properties": {
        "user_request": {
          "type": "string",
          "description": "Original user request that triggered this run"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence score for workflow selection"
        },
        "missing_inputs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of missing inputs required for workflow execution"
        }
      }
    }
  }
}
