{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Full Recovery Report",
  "type": "object",
  "required": ["report_id", "timestamp", "workflow_id", "recovery_steps"],
  "properties": {
    "report_id": {
      "type": "string",
      "description": "Unique identifier for this recovery report"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the recovery process started"
    },
    "workflow_id": {
      "type": "string",
      "description": "ID of the workflow being recovered"
    },
    "workflow_name": {
      "type": "string",
      "description": "Name of the workflow"
    },
    "failure_point": {
      "type": "object",
      "properties": {
        "step": {
          "type": "integer"
        },
        "agent": {
          "type": "string"
        },
        "error": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "recovery_steps": {
      "type": "array",
      "description": "Sequence of recovery actions taken",
      "items": {
        "type": "object",
        "required": ["step_number", "action", "status"],
        "properties": {
          "step_number": {
            "type": "integer"
          },
          "action": {
            "type": "string",
            "description": "Description of the recovery action"
          },
          "status": {
            "enum": ["success", "failed", "skipped", "in_progress"],
            "description": "Result of this recovery step"
          },
          "started_at": {
            "type": "string",
            "format": "date-time"
          },
          "completed_at": {
            "type": "string",
            "format": "date-time"
          },
          "duration_ms": {
            "type": "integer"
          },
          "details": {
            "type": "string"
          },
          "artifacts_affected": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "checkpoints_used": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "checkpoint_id": {
            "type": "string"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "restored": {
            "type": "boolean"
          }
        }
      }
    },
    "fallbacks_triggered": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "agent": {
            "type": "string"
          },
          "fallback_to": {
            "type": "string"
          },
          "success": {
            "type": "boolean"
          }
        }
      }
    },
    "final_status": {
      "enum": ["fully_recovered", "partially_recovered", "recovery_failed"],
      "description": "Overall recovery outcome"
    },
    "artifacts_recovered": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "artifacts_lost": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "total_duration_ms": {
      "type": "integer",
      "description": "Total recovery time in milliseconds"
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Recommendations to prevent similar failures"
    },
    "post_recovery_validation": {
      "type": "object",
      "properties": {
        "validation_passed": {
          "type": "boolean"
        },
        "schemas_validated": {
          "type": "integer"
        },
        "errors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
