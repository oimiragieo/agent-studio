{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Project Brief",
  "description": "Schema for project brief artifacts generated by Analyst agent",
  "required": ["project_name", "executive_summary", "problem_statement", "solution_overview"],
  "properties": {
    "project_name": {
      "type": "string",
      "description": "Name of the project"
    },
    "executive_summary": {
      "type": "string",
      "description": "Brief overview of the project for stakeholders"
    },
    "problem_statement": {
      "type": "string",
      "description": "Clear statement of the problem being solved"
    },
    "solution_overview": {
      "type": "string",
      "description": "High-level description of the proposed solution"
    },
    "market_context": {
      "type": "object",
      "properties": {
        "target_audience": {
          "type": "string",
          "description": "Primary target users or customers"
        },
        "competitive_landscape": {
          "type": "string",
          "description": "Analysis of competitive positioning"
        },
        "market_opportunity": {
          "type": "string",
          "description": "Market size and opportunity assessment"
        }
      }
    },
    "success_metrics": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Measurable outcomes indicating project success"
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "risk": {
            "type": "string",
            "description": "Description of the risk"
          },
          "impact": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          },
          "probability": {
            "type": "string",
            "enum": ["low", "medium", "high"]
          },
          "mitigation": {
            "type": "string",
            "description": "Strategy to mitigate this risk"
          }
        },
        "required": ["risk", "mitigation"]
      }
    },
    "technical_considerations": {
      "type": "string",
      "description": "High-level technical constraints or requirements"
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Actionable recommendations for next steps"
    },
    "next_steps": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Immediate actions required"
    },
    "timeline": {
      "type": "string",
      "description": "Estimated project timeline"
    },
    "stakeholders": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Key stakeholders involved"
    }
  }
}
