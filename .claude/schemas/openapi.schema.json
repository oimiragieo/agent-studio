{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://llm-rules.com/schemas/openapi.schema.json",
  "title": "OpenAPI Specification",
  "description": "OpenAPI 3.0 specification for API documentation",
  "type": "object",
  "required": ["openapi", "info", "paths"],
  "properties": {
    "openapi": {
      "type": "string",
      "description": "OpenAPI version",
      "pattern": "^3\\.0\\.[0-9]+$"
    },
    "info": {
      "type": "object",
      "required": ["title", "version"],
      "properties": {
        "title": {
          "type": "string",
          "description": "API title"
        },
        "description": {
          "type": "string",
          "description": "API description"
        },
        "version": {
          "type": "string",
          "description": "API version"
        },
        "contact": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "url": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "license": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "url": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "termsOfService": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "servers": {
      "type": "array",
      "description": "API servers",
      "items": {
        "type": "object",
        "required": ["url"],
        "properties": {
          "url": {
            "type": "string",
            "description": "Server URL"
          },
          "description": {
            "type": "string"
          },
          "variables": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "required": ["default"],
              "properties": {
                "default": {
                  "type": "string"
                },
                "enum": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "description": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "paths": {
      "type": "object",
      "description": "API paths",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "summary": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "operationId": {
              "type": "string"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "parameters": {
              "type": "array",
              "items": {
                "type": "object"
              }
            },
            "requestBody": {
              "type": "object",
              "properties": {
                "description": {
                  "type": "string"
                },
                "required": {
                  "type": "boolean"
                },
                "content": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "object",
                    "properties": {
                      "schema": {
                        "type": "object"
                      },
                      "examples": {
                        "type": "object"
                      }
                    }
                  }
                }
              }
            },
            "responses": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "properties": {
                  "description": {
                    "type": "string"
                  },
                  "content": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "object",
                      "properties": {
                        "schema": {
                          "type": "object"
                        },
                        "examples": {
                          "type": "object"
                        }
                      }
                    }
                  }
                }
              }
            },
            "security": {
              "type": "array",
              "items": {
                "type": "object"
              }
            },
            "deprecated": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "components": {
      "type": "object",
      "description": "Reusable components",
      "properties": {
        "schemas": {
          "type": "object",
          "description": "Schema definitions",
          "additionalProperties": {
            "type": "object"
          }
        },
        "responses": {
          "type": "object",
          "description": "Response definitions",
          "additionalProperties": {
            "type": "object"
          }
        },
        "parameters": {
          "type": "object",
          "description": "Parameter definitions",
          "additionalProperties": {
            "type": "object"
          }
        },
        "examples": {
          "type": "object",
          "description": "Example definitions",
          "additionalProperties": {
            "type": "object"
          }
        },
        "requestBodies": {
          "type": "object",
          "description": "Request body definitions",
          "additionalProperties": {
            "type": "object"
          }
        },
        "headers": {
          "type": "object",
          "description": "Header definitions",
          "additionalProperties": {
            "type": "object"
          }
        },
        "securitySchemes": {
          "type": "object",
          "description": "Security scheme definitions",
          "additionalProperties": {
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["apiKey", "http", "oauth2", "openIdConnect"]
              },
              "name": {
                "type": "string"
              },
              "in": {
                "type": "string",
                "enum": ["query", "header", "cookie"]
              },
              "scheme": {
                "type": "string"
              },
              "bearerFormat": {
                "type": "string"
              },
              "flows": {
                "type": "object"
              },
              "openIdConnectUrl": {
                "type": "string",
                "format": "uri"
              }
            }
          }
        }
      }
    },
    "security": {
      "type": "array",
      "description": "Global security requirements",
      "items": {
        "type": "object"
      }
    },
    "tags": {
      "type": "array",
      "description": "API tags for grouping",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "externalDocs": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "format": "uri"
              },
              "description": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "externalDocs": {
      "type": "object",
      "description": "External documentation",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "description": {
          "type": "string"
        }
      }
    }
  }
}
