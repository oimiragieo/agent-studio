{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Quality Report",
  "description": "Schema for quality report artifacts generated by QA agent",
  "required": ["report_id", "report_date", "quality_gate_decision", "overall_assessment"],
  "properties": {
    "report_id": {
      "type": "string",
      "description": "Unique identifier for the quality report"
    },
    "report_date": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the report was generated"
    },
    "qa_agent": {
      "type": "string",
      "description": "QA agent or user who generated the report"
    },
    "quality_gate_decision": {
      "type": "string",
      "enum": ["PASS", "CONCERNS", "FAIL", "WAIVED"],
      "description": "Quality gate decision"
    },
    "overall_assessment": {
      "type": "object",
      "required": ["summary", "status"],
      "properties": {
        "summary": {
          "type": "string",
          "description": "Overall quality assessment summary"
        },
        "status": {
          "type": "string",
          "enum": ["ready_for_production", "needs_improvement", "blocked", "requires_review"],
          "description": "Overall status"
        },
        "quality_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Overall quality score (0-100)"
        }
      }
    },
    "test_coverage": {
      "type": "object",
      "properties": {
        "unit_test_coverage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "integration_test_coverage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "e2e_test_coverage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "overall_coverage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "coverage_threshold_met": {
          "type": "boolean"
        }
      }
    },
    "code_quality_metrics": {
      "type": "object",
      "properties": {
        "complexity_score": {
          "type": "number"
        },
        "maintainability_index": {
          "type": "number"
        },
        "code_smells_count": {
          "type": "integer",
          "minimum": 0
        },
        "technical_debt_ratio": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        }
      }
    },
    "security_assessment": {
      "type": "object",
      "properties": {
        "vulnerabilities_found": {
          "type": "integer",
          "minimum": 0
        },
        "vulnerabilities_critical": {
          "type": "integer",
          "minimum": 0
        },
        "security_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "security_issues": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "severity": {
                "type": "string",
                "enum": ["low", "medium", "high", "critical"]
              },
              "description": {
                "type": "string"
              },
              "recommendation": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "performance_assessment": {
      "type": "object",
      "properties": {
        "performance_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "bottlenecks_identified": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "optimization_opportunities": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "regression_testing": {
      "type": "object",
      "properties": {
        "regression_tests_passed": {
          "type": "boolean"
        },
        "regression_issues_found": {
          "type": "integer",
          "minimum": 0
        },
        "regression_issues": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": ["low", "medium", "high", "critical"]
              }
            }
          }
        }
      }
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["category", "severity", "description"],
        "properties": {
          "category": {
            "type": "string",
            "enum": ["test_coverage", "code_quality", "security", "performance", "accessibility", "documentation", "other"]
          },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical", "blocker"]
          },
          "description": {
            "type": "string"
          },
          "recommendation": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": ["P0", "P1", "P2", "P3"]
          }
        }
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["action", "priority"],
        "properties": {
          "action": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": ["P0", "P1", "P2", "P3"]
          },
          "estimated_effort": {
            "type": "string"
          }
        }
      }
    },
    "sign_off": {
      "type": "object",
      "properties": {
        "recommendation": {
          "type": "string",
          "enum": ["approve", "approve_with_concerns", "reject", "requires_review"]
        },
        "rationale": {
          "type": "string"
        },
        "conditions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}

