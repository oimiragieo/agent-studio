{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Recovery Test Summary",
  "type": "object",
  "required": ["summary_id", "timestamp", "test_suite", "test_results"],
  "properties": {
    "summary_id": {
      "type": "string",
      "description": "Unique identifier for this test summary"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the test suite was executed"
    },
    "test_suite": {
      "type": "string",
      "description": "Name of the recovery test suite"
    },
    "test_environment": {
      "type": "object",
      "properties": {
        "platform": {
          "type": "string"
        },
        "workflow_engine_version": {
          "type": "string"
        },
        "checkpoint_storage": {
          "type": "string"
        }
      }
    },
    "test_results": {
      "type": "array",
      "description": "Results for each recovery test case",
      "items": {
        "type": "object",
        "required": ["test_id", "test_name", "status"],
        "properties": {
          "test_id": {
            "type": "string",
            "description": "Unique identifier for the test case"
          },
          "test_name": {
            "type": "string",
            "description": "Descriptive name of the test"
          },
          "category": {
            "type": "string",
            "description": "Test category (e.g., 'checkpoint', 'fallback', 'validation')"
          },
          "status": {
            "enum": ["passed", "failed", "skipped", "error"],
            "description": "Test execution result"
          },
          "duration_ms": {
            "type": "integer",
            "description": "Test execution time in milliseconds"
          },
          "started_at": {
            "type": "string",
            "format": "date-time"
          },
          "completed_at": {
            "type": "string",
            "format": "date-time"
          },
          "error_message": {
            "type": "string",
            "description": "Error message if test failed"
          },
          "assertions": {
            "type": "object",
            "properties": {
              "total": {
                "type": "integer"
              },
              "passed": {
                "type": "integer"
              },
              "failed": {
                "type": "integer"
              }
            }
          },
          "artifacts_generated": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "summary_statistics": {
      "type": "object",
      "required": ["total_tests", "passed", "failed"],
      "properties": {
        "total_tests": {
          "type": "integer",
          "description": "Total number of tests executed"
        },
        "passed": {
          "type": "integer",
          "description": "Number of tests that passed"
        },
        "failed": {
          "type": "integer",
          "description": "Number of tests that failed"
        },
        "skipped": {
          "type": "integer",
          "description": "Number of tests that were skipped"
        },
        "errors": {
          "type": "integer",
          "description": "Number of tests with errors"
        },
        "pass_rate": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Percentage of tests that passed"
        },
        "total_duration_ms": {
          "type": "integer",
          "description": "Total test suite execution time"
        }
      }
    },
    "coverage": {
      "type": "object",
      "properties": {
        "checkpoint_scenarios": {
          "type": "integer",
          "description": "Number of checkpoint scenarios tested"
        },
        "fallback_scenarios": {
          "type": "integer",
          "description": "Number of fallback scenarios tested"
        },
        "validation_scenarios": {
          "type": "integer",
          "description": "Number of validation scenarios tested"
        },
        "recovery_scenarios": {
          "type": "integer",
          "description": "Number of full recovery scenarios tested"
        }
      }
    },
    "failures_by_category": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "category": {
            "type": "string"
          },
          "count": {
            "type": "integer"
          },
          "tests": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Recommendations based on test results"
    },
    "next_steps": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Suggested next steps for recovery system improvement"
    }
  }
}
