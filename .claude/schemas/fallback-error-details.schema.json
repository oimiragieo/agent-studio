{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fallback Error Details",
  "description": "Schema for error-details artifacts produced during fallback routing tests.",
  "type": "object",
  "required": ["workflow_id", "generated_at", "failure_type"],
  "properties": {
    "workflow_id": { "type": "string" },
    "generated_at": { "type": "string", "format": "date-time" },
    "failure_type": { "type": "string" },
    "message": { "type": "string" },
    "stack": { "type": "string" },
    "tool": { "type": "string" },
    "context": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": true
}
