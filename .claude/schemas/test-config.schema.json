{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "test-config.schema.json",
  "title": "Test Configuration",
  "description": "Schema for test configuration artifacts",
  "type": "object",
  "required": ["test_type", "test_scope"],
  "properties": {
    "test_type": {
      "type": "string",
      "enum": ["unit", "integration", "e2e", "recovery", "stress"],
      "description": "Type of test to execute"
    },
    "test_scope": {
      "type": "string",
      "description": "Scope of the test (e.g., module, feature, system)"
    },
    "timeout_ms": {
      "type": "integer",
      "minimum": 0,
      "default": 30000,
      "description": "Test timeout in milliseconds"
    },
    "retry_count": {
      "type": "integer",
      "minimum": 0,
      "default": 3,
      "description": "Number of retries allowed for failed tests"
    },
    "test_environment": {
      "type": "string",
      "description": "Environment configuration for tests"
    },
    "test_data": {
      "type": "object",
      "description": "Test data and fixtures"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Test tags for categorization"
    }
  }
}
