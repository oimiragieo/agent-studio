{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Model Strategy",
  "description": "Schema for AI model strategy artifacts generated by model-orchestrator agent",
  "required": ["strategy_id", "strategy_date", "model_selections", "routing_strategy"],
  "properties": {
    "strategy_id": {
      "type": "string",
      "description": "Unique identifier for the model strategy"
    },
    "strategy_date": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when strategy was created"
    },
    "strategist": {
      "type": "string",
      "description": "Agent or user who created the strategy"
    },
    "use_case_analysis": {
      "type": "object",
      "properties": {
        "primary_use_cases": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "use_case": { "type": "string" },
              "requirements": { "type": "array", "items": { "type": "string" } },
              "priority": { "type": "string", "enum": ["critical", "high", "medium", "low"] }
            }
          }
        },
        "quality_requirements": {
          "type": "object",
          "properties": {
            "accuracy_threshold": { "type": "number", "minimum": 0, "maximum": 1 },
            "latency_threshold_ms": { "type": "number", "minimum": 0 },
            "throughput_requirement": { "type": "string" }
          }
        }
      }
    },
    "model_selections": {
      "type": "array",
      "description": "Selected models for different tasks",
      "items": {
        "type": "object",
        "required": ["task", "primary_model"],
        "properties": {
          "task": { "type": "string" },
          "primary_model": {
            "type": "object",
            "required": ["provider", "model_id"],
            "properties": {
              "provider": { "type": "string", "enum": ["anthropic", "openai", "google", "cohere", "local", "other"] },
              "model_id": { "type": "string" },
              "version": { "type": "string" },
              "context_window": { "type": "integer" },
              "capabilities": { "type": "array", "items": { "type": "string" } }
            }
          },
          "fallback_model": {
            "type": "object",
            "properties": {
              "provider": { "type": "string" },
              "model_id": { "type": "string" },
              "trigger_conditions": { "type": "array", "items": { "type": "string" } }
            }
          },
          "selection_rationale": { "type": "string" }
        }
      }
    },
    "routing_strategy": {
      "type": "object",
      "required": ["approach"],
      "properties": {
        "approach": { "type": "string", "enum": ["task_based", "complexity_based", "cost_optimized", "latency_optimized", "hybrid"] },
        "routing_rules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "condition": { "type": "string" },
              "route_to": { "type": "string" },
              "priority": { "type": "integer" }
            }
          }
        },
        "load_balancing": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "algorithm": { "type": "string", "enum": ["round_robin", "weighted", "least_connections", "adaptive"] }
          }
        }
      }
    },
    "cost_analysis": {
      "type": "object",
      "properties": {
        "estimated_monthly_cost": {
          "type": "object",
          "properties": {
            "min": { "type": "number" },
            "max": { "type": "number" },
            "expected": { "type": "number" },
            "currency": { "type": "string", "default": "USD" }
          }
        },
        "cost_per_request": {
          "type": "object",
          "properties": {
            "average": { "type": "number" },
            "by_task": { "type": "object", "additionalProperties": { "type": "number" } }
          }
        },
        "cost_optimization_opportunities": { "type": "array", "items": { "type": "string" } }
      }
    },
    "fallback_strategies": {
      "type": "object",
      "properties": {
        "primary_fallback_chain": { "type": "array", "items": { "type": "string" } },
        "failure_handling": {
          "type": "object",
          "properties": {
            "retry_policy": {
              "type": "object",
              "properties": {
                "max_retries": { "type": "integer" },
                "backoff_type": { "type": "string", "enum": ["linear", "exponential", "fixed"] },
                "initial_delay_ms": { "type": "integer" }
              }
            },
            "circuit_breaker": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" },
                "failure_threshold": { "type": "integer" },
                "recovery_time_ms": { "type": "integer" }
              }
            }
          }
        }
      }
    },
    "rate_limiting": {
      "type": "object",
      "properties": {
        "provider_limits": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "provider": { "type": "string" },
              "requests_per_minute": { "type": "integer" },
              "tokens_per_minute": { "type": "integer" },
              "requests_per_day": { "type": "integer" }
            }
          }
        }
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "recommendation": { "type": "string" },
          "priority": { "type": "string", "enum": ["high", "medium", "low"] },
          "category": { "type": "string", "enum": ["cost", "performance", "reliability", "security"] }
        }
      }
    }
  }
}
