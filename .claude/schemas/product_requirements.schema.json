{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Product Requirements Document",
  "description": "Schema for PRD artifacts generated by PM agent",
  "required": ["product_name", "overview", "user_stories", "features"],
  "properties": {
    "product_name": {
      "type": "string",
      "description": "Name of the product or feature"
    },
    "overview": {
      "type": "string",
      "description": "Product overview and purpose"
    },
    "goals_objectives": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Product goals and business objectives"
    },
    "target_users": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "persona": {
            "type": "string"
          },
          "needs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "user_stories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "story": {
            "type": "string"
          },
          "acceptance_criteria": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "priority": {
            "type": "string",
            "enum": ["must-have", "should-have", "could-have", "won't-have"]
          }
        },
        "required": ["id", "story", "acceptance_criteria"]
      }
    },
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "user_stories": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["name", "description"]
      }
    },
    "technical_requirements": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "success_metrics": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "metric": {
            "type": "string"
          },
          "target": {
            "type": "string"
          }
        }
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
