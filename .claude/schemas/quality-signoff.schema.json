{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://llm-rules.com/schemas/quality-signoff.schema.json",
  "title": "Quality Signoff",
  "description": "Quality assurance signoff artifact for code quality, test coverage, and defect resolution",
  "type": "object",
  "required": [
    "workflow_id",
    "signoff_agent",
    "timestamp",
    "verdict",
    "test_coverage_percentage",
    "critical_bugs_found",
    "regression_status",
    "test_results_summary"
  ],
  "properties": {
    "workflow_id": {
      "type": "string",
      "description": "Unique identifier for the workflow",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "signoff_agent": {
      "type": "string",
      "description": "Agent providing the signoff",
      "enum": ["qa"]
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of signoff",
      "format": "date-time"
    },
    "verdict": {
      "type": "string",
      "description": "Final verdict on quality",
      "enum": ["approved", "approved_with_conditions", "rejected"]
    },
    "test_coverage_percentage": {
      "type": "number",
      "description": "Overall test coverage percentage",
      "minimum": 0,
      "maximum": 100
    },
    "critical_bugs_found": {
      "type": "integer",
      "description": "Number of critical bugs found",
      "minimum": 0
    },
    "regression_status": {
      "type": "string",
      "description": "Status of regression testing",
      "enum": ["passed", "failed", "not_run", "partial"]
    },
    "test_results_summary": {
      "type": "object",
      "description": "Summary of test results",
      "required": ["unit_tests", "integration_tests", "e2e_tests"],
      "properties": {
        "unit_tests": {
          "type": "object",
          "required": ["total", "passed", "failed", "skipped"],
          "properties": {
            "total": {
              "type": "integer",
              "minimum": 0
            },
            "passed": {
              "type": "integer",
              "minimum": 0
            },
            "failed": {
              "type": "integer",
              "minimum": 0
            },
            "skipped": {
              "type": "integer",
              "minimum": 0
            },
            "coverage_percentage": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            }
          }
        },
        "integration_tests": {
          "type": "object",
          "required": ["total", "passed", "failed", "skipped"],
          "properties": {
            "total": {
              "type": "integer",
              "minimum": 0
            },
            "passed": {
              "type": "integer",
              "minimum": 0
            },
            "failed": {
              "type": "integer",
              "minimum": 0
            },
            "skipped": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "e2e_tests": {
          "type": "object",
          "required": ["total", "passed", "failed", "skipped"],
          "properties": {
            "total": {
              "type": "integer",
              "minimum": 0
            },
            "passed": {
              "type": "integer",
              "minimum": 0
            },
            "failed": {
              "type": "integer",
              "minimum": 0
            },
            "skipped": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      }
    },
    "bugs_found": {
      "type": "array",
      "description": "List of bugs found during QA",
      "items": {
        "type": "object",
        "required": ["severity", "description", "status"],
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "description": {
            "type": "string",
            "minLength": 10
          },
          "status": {
            "type": "string",
            "enum": ["open", "fixed", "wont_fix", "deferred"]
          },
          "location": {
            "type": "string",
            "description": "File or component where bug was found"
          },
          "reproduction_steps": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "quality_metrics": {
      "type": "object",
      "description": "Additional quality metrics",
      "properties": {
        "code_complexity": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        },
        "maintainability_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "technical_debt_hours": {
          "type": "number",
          "minimum": 0
        },
        "code_duplication_percentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        }
      }
    },
    "approval_conditions": {
      "type": "array",
      "description": "Conditions for approval (if verdict is approved_with_conditions)",
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "rejection_reasons": {
      "type": "array",
      "description": "Reasons for rejection (if verdict is rejected)",
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "recommendations": {
      "type": "array",
      "description": "QA recommendations for improvement",
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "signoff_notes": {
      "type": "string",
      "description": "Additional notes from QA agent"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "verdict": {
            "const": "approved_with_conditions"
          }
        }
      },
      "then": {
        "required": ["approval_conditions"]
      }
    },
    {
      "if": {
        "properties": {
          "verdict": {
            "const": "rejected"
          }
        }
      },
      "then": {
        "required": ["rejection_reasons"]
      }
    }
  ]
}
