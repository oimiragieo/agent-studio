{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Story",
  "description": "Schema for individual user story",
  "type": "object",
  "required": ["id", "title", "description", "acceptance_criteria"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique story identifier"
    },
    "title": {
      "type": "string",
      "description": "Story title"
    },
    "description": {
      "type": "string",
      "description": "Story description in Given-When-Then format"
    },
    "acceptance_criteria": {
      "type": "array",
      "description": "List of acceptance criteria",
      "items": {
        "type": "string"
      }
    },
    "story_points": {
      "type": "number",
      "description": "Estimated story points"
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Story priority"
    },
    "epic_id": {
      "type": "string",
      "description": "ID of parent epic"
    },
    "dependencies": {
      "type": "array",
      "description": "Story IDs this story depends on",
      "items": {
        "type": "string"
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["todo", "in_progress", "review", "done"],
      "description": "Story status"
    }
  }
}

