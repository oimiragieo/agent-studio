{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://llm-rules.com/schemas/product-signoff.schema.json",
  "title": "Product Signoff",
  "description": "Product signoff artifact for requirements fulfillment, user stories, and acceptance criteria",
  "type": "object",
  "required": [
    "workflow_id",
    "signoff_agent",
    "timestamp",
    "verdict",
    "acceptance_criteria_met",
    "user_stories_complete",
    "stakeholder_approval"
  ],
  "properties": {
    "workflow_id": {
      "type": "string",
      "description": "Unique identifier for the workflow",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "signoff_agent": {
      "type": "string",
      "description": "Agent providing the signoff",
      "enum": ["pm"]
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of signoff",
      "format": "date-time"
    },
    "verdict": {
      "type": "string",
      "description": "Final product verdict",
      "enum": ["approved", "approved_with_conditions", "rejected"]
    },
    "acceptance_criteria_met": {
      "type": "boolean",
      "description": "Whether all acceptance criteria are met"
    },
    "user_stories_complete": {
      "type": "number",
      "description": "Percentage of user stories completed",
      "minimum": 0,
      "maximum": 100
    },
    "stakeholder_approval": {
      "type": "boolean",
      "description": "Whether stakeholders have approved"
    },
    "requirements_assessment": {
      "type": "object",
      "description": "Assessment of requirements fulfillment",
      "properties": {
        "functional_requirements": {
          "type": "object",
          "properties": {
            "total": {
              "type": "integer",
              "minimum": 0
            },
            "completed": {
              "type": "integer",
              "minimum": 0
            },
            "incomplete": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "requirement_id": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "reason": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "non_functional_requirements": {
          "type": "object",
          "properties": {
            "total": {
              "type": "integer",
              "minimum": 0
            },
            "completed": {
              "type": "integer",
              "minimum": 0
            },
            "incomplete": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "requirement_id": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "reason": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "user_stories_assessment": {
      "type": "object",
      "description": "Assessment of user stories",
      "properties": {
        "total_stories": {
          "type": "integer",
          "minimum": 0
        },
        "completed_stories": {
          "type": "integer",
          "minimum": 0
        },
        "stories": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["story_id", "title", "status"],
            "properties": {
              "story_id": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "status": {
                "type": "string",
                "enum": ["completed", "partially_completed", "not_started", "deferred"]
              },
              "acceptance_criteria_met": {
                "type": "boolean"
              },
              "notes": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "feature_completeness": {
      "type": "object",
      "description": "Feature completeness assessment",
      "properties": {
        "mvp_features_complete": {
          "type": "boolean"
        },
        "optional_features_complete": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "missing_features": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "feature": {
                "type": "string"
              },
              "priority": {
                "type": "string",
                "enum": ["critical", "high", "medium", "low"]
              },
              "impact": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "business_value_assessment": {
      "type": "object",
      "description": "Business value assessment",
      "properties": {
        "business_objectives_met": {
          "type": "boolean"
        },
        "expected_roi": {
          "type": "string"
        },
        "success_metrics_defined": {
          "type": "boolean"
        },
        "success_metrics": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "metric": {
                "type": "string"
              },
              "target": {
                "type": "string"
              },
              "tracking_method": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "ux_assessment": {
      "type": "object",
      "description": "User experience assessment",
      "properties": {
        "user_flows_implemented": {
          "type": "boolean"
        },
        "usability_concerns": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "ux_quality": {
          "type": "string",
          "enum": ["excellent", "good", "adequate", "poor"]
        }
      }
    },
    "stakeholder_feedback": {
      "type": "object",
      "description": "Stakeholder feedback",
      "properties": {
        "stakeholders_consulted": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "feedback_items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "stakeholder": {
                "type": "string"
              },
              "feedback": {
                "type": "string"
              },
              "addressed": {
                "type": "boolean"
              }
            }
          }
        }
      }
    },
    "deferred_items": {
      "type": "array",
      "description": "Items deferred to future releases",
      "items": {
        "type": "object",
        "properties": {
          "item": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          },
          "planned_release": {
            "type": "string"
          }
        }
      }
    },
    "approval_conditions": {
      "type": "array",
      "description": "Conditions for approval (if verdict is approved_with_conditions)",
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "rejection_reasons": {
      "type": "array",
      "description": "Reasons for rejection (if verdict is rejected)",
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "recommendations": {
      "type": "array",
      "description": "Product recommendations",
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "signoff_notes": {
      "type": "string",
      "description": "Additional notes from PM"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "verdict": {
            "const": "approved_with_conditions"
          }
        }
      },
      "then": {
        "required": ["approval_conditions"]
      }
    },
    {
      "if": {
        "properties": {
          "verdict": {
            "const": "rejected"
          }
        }
      },
      "then": {
        "required": ["rejection_reasons"]
      }
    }
  ]
}
