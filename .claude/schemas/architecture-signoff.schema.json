{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://llm-rules.com/schemas/architecture-signoff.schema.json",
  "title": "Architecture Signoff",
  "description": "Architecture signoff artifact for system design, technical decisions, and scalability",
  "type": "object",
  "required": [
    "workflow_id",
    "signoff_agent",
    "timestamp",
    "verdict",
    "architecture_alignment",
    "technical_debt_acceptable",
    "scalability_verified",
    "design_review_complete"
  ],
  "properties": {
    "workflow_id": {
      "type": "string",
      "description": "Unique identifier for the workflow",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "signoff_agent": {
      "type": "string",
      "description": "Agent providing the signoff",
      "enum": ["architect"]
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of signoff",
      "format": "date-time"
    },
    "verdict": {
      "type": "string",
      "description": "Final architecture verdict",
      "enum": ["approved", "approved_with_conditions", "rejected"]
    },
    "architecture_alignment": {
      "type": "boolean",
      "description": "Whether implementation aligns with architecture"
    },
    "technical_debt_acceptable": {
      "type": "boolean",
      "description": "Whether technical debt introduced is acceptable"
    },
    "scalability_verified": {
      "type": "boolean",
      "description": "Whether scalability requirements are met"
    },
    "design_review_complete": {
      "type": "boolean",
      "description": "Whether comprehensive design review was completed"
    },
    "architecture_assessment": {
      "type": "object",
      "description": "Detailed architecture assessment",
      "properties": {
        "design_patterns": {
          "type": "object",
          "properties": {
            "appropriate": {
              "type": "boolean"
            },
            "patterns_used": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "concerns": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "separation_of_concerns": {
          "type": "object",
          "properties": {
            "adequate": {
              "type": "boolean"
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "modularity": {
          "type": "object",
          "properties": {
            "score": {
              "type": "string",
              "enum": ["excellent", "good", "adequate", "poor"]
            },
            "coupling_level": {
              "type": "string",
              "enum": ["loose", "moderate", "tight"]
            },
            "cohesion_level": {
              "type": "string",
              "enum": ["high", "moderate", "low"]
            }
          }
        },
        "api_design": {
          "type": "object",
          "properties": {
            "rest_compliance": {
              "type": "boolean"
            },
            "consistency": {
              "type": "boolean"
            },
            "versioning_strategy": {
              "type": "string"
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "database_design": {
          "type": "object",
          "properties": {
            "schema_quality": {
              "type": "string",
              "enum": ["excellent", "good", "adequate", "poor"]
            },
            "normalization": {
              "type": "string",
              "enum": ["appropriate", "over_normalized", "under_normalized"]
            },
            "indexing": {
              "type": "string",
              "enum": ["optimal", "adequate", "inadequate"]
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "scalability_assessment": {
      "type": "object",
      "description": "Scalability review",
      "properties": {
        "horizontal_scalability": {
          "type": "object",
          "properties": {
            "supported": {
              "type": "boolean"
            },
            "concerns": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "vertical_scalability": {
          "type": "object",
          "properties": {
            "supported": {
              "type": "boolean"
            },
            "concerns": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "performance_characteristics": {
          "type": "object",
          "properties": {
            "expected_throughput": {
              "type": "string"
            },
            "expected_latency": {
              "type": "string"
            },
            "bottlenecks_identified": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "caching_strategy": {
          "type": "object",
          "properties": {
            "implemented": {
              "type": "boolean"
            },
            "appropriate": {
              "type": "boolean"
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "technical_debt": {
      "type": "object",
      "description": "Technical debt assessment",
      "properties": {
        "debt_introduced": {
          "type": "boolean"
        },
        "debt_items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["description", "severity", "estimated_effort"],
            "properties": {
              "description": {
                "type": "string",
                "minLength": 20
              },
              "severity": {
                "type": "string",
                "enum": ["critical", "high", "medium", "low"]
              },
              "estimated_effort": {
                "type": "string",
                "description": "Estimated effort to resolve (e.g., '2 days', '1 week')"
              },
              "mitigation_plan": {
                "type": "string"
              }
            }
          }
        },
        "total_debt_hours": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "technology_choices": {
      "type": "object",
      "description": "Assessment of technology choices",
      "properties": {
        "appropriate": {
          "type": "boolean"
        },
        "technologies_used": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "concerns": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "alternatives_considered": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "integration_assessment": {
      "type": "object",
      "description": "Assessment of system integrations",
      "properties": {
        "integration_points": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "system": {
                "type": "string"
              },
              "integration_type": {
                "type": "string"
              },
              "assessment": {
                "type": "string",
                "enum": ["excellent", "good", "adequate", "poor"]
              },
              "issues": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "approval_conditions": {
      "type": "array",
      "description": "Conditions for approval (if verdict is approved_with_conditions)",
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "rejection_reasons": {
      "type": "array",
      "description": "Reasons for rejection (if verdict is rejected)",
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "recommendations": {
      "type": "array",
      "description": "Architecture recommendations",
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "signoff_notes": {
      "type": "string",
      "description": "Additional notes from architect"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "verdict": {
            "const": "approved_with_conditions"
          }
        }
      },
      "then": {
        "required": ["approval_conditions"]
      }
    },
    {
      "if": {
        "properties": {
          "verdict": {
            "const": "rejected"
          }
        }
      },
      "then": {
        "required": ["rejection_reasons"]
      }
    }
  ]
}
