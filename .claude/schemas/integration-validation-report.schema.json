{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Integration Validation Report",
  "description": "Schema for comprehensive integration validation report for Cursor Plan Mode integration",
  "required": ["report_id", "created_at", "workflow_id", "overall_status", "validation_results"],
  "properties": {
    "report_id": {
      "type": "string",
      "description": "Unique identifier for the validation report"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when report was created"
    },
    "workflow_id": {
      "type": "string",
      "description": "Workflow ID being validated"
    },
    "overall_status": {
      "type": "string",
      "enum": ["passed", "failed", "partial"],
      "description": "Overall integration validation status"
    },
    "validation_results": {
      "type": "object",
      "required": ["strategic_to_plan_mode_handoff", "plan_mode_to_implementation", "artifact_linking", "multi_file_coordination", "artifact_persistence"],
      "properties": {
        "strategic_to_plan_mode_handoff": {
          "type": "object",
          "required": ["passed", "details"],
          "properties": {
            "passed": {
              "type": "boolean",
              "description": "Whether strategic plan → Plan Mode handoff was successful"
            },
            "details": {
              "type": "string",
              "description": "Details about handoff"
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "information_loss": {
              "type": "boolean",
              "description": "Whether any information was lost during handoff"
            }
          }
        },
        "plan_mode_to_implementation": {
          "type": "object",
          "required": ["passed", "details"],
          "properties": {
            "passed": {
              "type": "boolean",
              "description": "Whether Plan Mode → Implementation execution was successful"
            },
            "details": {
              "type": "string",
              "description": "Details about execution"
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "both_plans_referenced": {
              "type": "boolean",
              "description": "Whether implementation referenced both strategic and implementation plans"
            }
          }
        },
        "artifact_linking": {
          "type": "object",
          "required": ["passed", "details"],
          "properties": {
            "passed": {
              "type": "boolean",
              "description": "Whether bidirectional artifact linking is correct"
            },
            "details": {
              "type": "string",
              "description": "Details about linking"
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "bidirectional": {
              "type": "boolean",
              "description": "Whether both plans reference each other correctly"
            }
          }
        },
        "multi_file_coordination": {
          "type": "object",
          "required": ["passed", "details"],
          "properties": {
            "passed": {
              "type": "boolean",
              "description": "Whether multi-file changes were coordinated successfully"
            },
            "details": {
              "type": "string",
              "description": "Details about coordination"
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "coordination_percentage": {
              "type": "number",
              "description": "Percentage of files properly coordinated (0-100)",
              "minimum": 0,
              "maximum": 100
            }
          }
        },
        "artifact_persistence": {
          "type": "object",
          "required": ["passed", "details"],
          "properties": {
            "passed": {
              "type": "boolean",
              "description": "Whether Plan Mode artifacts persist across sessions"
            },
            "details": {
              "type": "string",
              "description": "Details about persistence"
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "persistence_location": {
              "type": "string",
              "description": "Location where artifacts are persisted"
            }
          }
        }
      }
    },
    "success_criteria": {
      "type": "object",
      "description": "Integration success criteria validation",
      "properties": {
        "strategic_plan_created": {
          "type": "boolean",
          "description": "Strategic plan created with plan_mode_ready: true"
        },
        "plan_mode_handoff_successful": {
          "type": "boolean",
          "description": "Plan Mode handoff successful with correct references"
        },
        "implementation_plan_created": {
          "type": "boolean",
          "description": "Implementation plan created with strategic plan link"
        },
        "artifact_linking_bidirectional": {
          "type": "boolean",
          "description": "Artifact linking bidirectional (both plans reference each other)"
        },
        "multi_file_changes_coordinated": {
          "type": "boolean",
          "description": "Multi-file changes coordinated successfully"
        },
        "plan_mode_artifacts_persist": {
          "type": "boolean",
          "description": "Plan Mode artifacts persist across sessions"
        },
        "implementation_follows_both_plans": {
          "type": "boolean",
          "description": "Implementation follows both strategic and implementation plans"
        },
        "integration_seamless": {
          "type": "boolean",
          "description": "Integration seamless and transparent"
        }
      }
    },
    "integration_gaps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "gap_type": {
            "type": "string",
            "description": "Type of integration gap"
          },
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "description": {
            "type": "string",
            "description": "Description of the gap"
          },
          "affected_areas": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Areas affected by this gap"
          },
          "recommendation": {
            "type": "string",
            "description": "Recommended solution"
          }
        }
      },
      "description": "Identified integration gaps or issues"
    },
    "metrics": {
      "type": "object",
      "description": "Integration metrics",
      "properties": {
        "total_validations": {
          "type": "integer",
          "minimum": 0
        },
        "validations_passed": {
          "type": "integer",
          "minimum": 0
        },
        "validations_failed": {
          "type": "integer",
          "minimum": 0
        },
        "success_rate": {
          "type": "number",
          "description": "Success rate percentage (0-100)",
          "minimum": 0,
          "maximum": 100
        },
        "information_loss_detected": {
          "type": "boolean"
        },
        "coordination_quality": {
          "type": "number",
          "description": "Overall coordination quality score (0-10)",
          "minimum": 0,
          "maximum": 10
        }
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Recommendations for improving integration"
    },
    "conclusion": {
      "type": "string",
      "description": "Overall conclusion about integration quality"
    }
  }
}
