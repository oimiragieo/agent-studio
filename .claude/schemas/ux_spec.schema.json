{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "UX Specification",
  "description": "Schema for UX/UI specification artifacts generated by UX Expert agent",
  "required": ["feature_name", "overview", "design_goals"],
  "properties": {
    "feature_name": {
      "type": "string",
      "description": "Name of the feature or component"
    },
    "overview": {
      "type": "string",
      "description": "Overview of the UX/UI requirements"
    },
    "design_goals": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Primary design objectives"
    },
    "user_personas": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "characteristics": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "goals": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "user_flows": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "flow_name": {
            "type": "string"
          },
          "steps": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "design_system": {
      "type": "object",
      "properties": {
        "colors": {
          "type": "object"
        },
        "typography": {
          "type": "object"
        },
        "components": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "accessibility_requirements": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "WCAG and accessibility requirements"
    },
    "responsive_design": {
      "type": "object",
      "properties": {
        "breakpoints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "mobile_first": {
          "type": "boolean"
        }
      }
    },
    "interaction_patterns": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Key interaction patterns and behaviors"
    }
  }
}

