{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Review Summary",
  "description": "Schema for consolidated review summary artifacts from code review workflow",
  "required": ["summary_id", "review_date", "files_reviewed", "total_issues", "severity_breakdown", "recommendations"],
  "properties": {
    "summary_id": {
      "type": "string",
      "description": "Unique identifier for the review summary"
    },
    "review_date": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the review summary was created"
    },
    "workflow_id": {
      "type": "string",
      "description": "Associated workflow ID"
    },
    "files_reviewed": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of file paths that were reviewed"
    },
    "total_issues": {
      "type": "integer",
      "description": "Total number of issues identified",
      "minimum": 0
    },
    "severity_breakdown": {
      "type": "object",
      "description": "Count of issues by severity level",
      "properties": {
        "critical": {
          "type": "integer",
          "minimum": 0
        },
        "high": {
          "type": "integer",
          "minimum": 0
        },
        "medium": {
          "type": "integer",
          "minimum": 0
        },
        "low": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["critical", "high", "medium", "low"]
    },
    "category_breakdown": {
      "type": "object",
      "description": "Count of issues by category",
      "properties": {
        "security": {
          "type": "integer",
          "minimum": 0
        },
        "performance": {
          "type": "integer",
          "minimum": 0
        },
        "code_quality": {
          "type": "integer",
          "minimum": 0
        },
        "maintainability": {
          "type": "integer",
          "minimum": 0
        },
        "design_pattern": {
          "type": "integer",
          "minimum": 0
        },
        "test_coverage": {
          "type": "integer",
          "minimum": 0
        },
        "documentation": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["priority", "description"],
        "properties": {
          "priority": {
            "type": "string",
            "enum": ["P0", "P1", "P2", "P3"],
            "description": "Priority ranking (P0 = highest)"
          },
          "description": {
            "type": "string",
            "description": "Actionable recommendation"
          },
          "category": {
            "type": "string",
            "description": "Recommendation category"
          },
          "affected_files": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Files affected by this recommendation"
          }
        }
      },
      "description": "Prioritized recommendations for improvement"
    },
    "overall_assessment": {
      "type": "object",
      "description": "Overall code quality assessment",
      "properties": {
        "quality_score": {
          "type": "number",
          "description": "Overall quality rating (1-10)",
          "minimum": 1,
          "maximum": 10
        },
        "status": {
          "type": "string",
          "enum": ["approved", "needs_changes", "blocked"],
          "description": "Review status"
        },
        "summary": {
          "type": "string",
          "description": "Brief summary of overall assessment"
        }
      }
    },
    "multi_ai_review": {
      "type": "object",
      "description": "Multi-AI review integration (if applicable)",
      "properties": {
        "included": {
          "type": "boolean",
          "description": "Whether multi-AI review was included"
        },
        "consensus_level": {
          "type": "string",
          "enum": ["strong", "moderate", "weak"],
          "description": "Level of consensus across AI providers"
        },
        "providers": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "AI providers that participated in review"
        }
      }
    },
    "next_steps": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Recommended next steps"
    }
  }
}
