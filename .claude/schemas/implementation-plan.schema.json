{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Implementation Plan",
  "description": "Schema for implementation-level plan generated by Cursor Plan Mode (or simulated)",
  "required": ["plan_id", "created_at", "workflow_id", "strategic_plan_id", "tasks"],
  "properties": {
    "plan_id": {
      "type": "string",
      "description": "Unique identifier for the implementation plan"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when plan was created"
    },
    "workflow_id": {
      "type": "string",
      "description": "Workflow ID for traceability (same as strategic plan)"
    },
    "strategic_plan_id": {
      "type": "string",
      "description": "Reference to strategic plan ID (links back to planner output)"
    },
    "strategic_plan_path": {
      "type": "string",
      "description": "Path to strategic plan JSON file"
    },
    "plan_mode_metadata": {
      "type": "object",
      "description": "Metadata from Plan Mode",
      "properties": {
        "platform": {
          "type": "string",
          "description": "Platform that generated the plan",
          "default": "cursor-plan-mode"
        },
        "simulated": {
          "type": "boolean",
          "description": "Whether this is a simulated Plan Mode execution",
          "default": false
        },
        "plan_location": {
          "type": "string",
          "description": "Location where plan is saved (e.g., .cursor/plans/)"
        }
      }
    },
    "implementation_scope": {
      "type": "string",
      "description": "Scope of implementation"
    },
    "tasks": {
      "type": "array",
      "description": "Implementation tasks",
      "items": {
        "type": "object",
        "required": ["task_id", "description", "status", "files"],
        "properties": {
          "task_id": {
            "type": "string",
            "description": "Unique identifier for the task"
          },
          "description": {
            "type": "string",
            "description": "Task description"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "in_progress", "completed", "blocked"],
            "description": "Task status"
          },
          "priority": {
            "type": "string",
            "enum": ["P0", "P1", "P2", "P3"],
            "description": "Task priority"
          },
          "files": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["path", "action"],
              "properties": {
                "path": {
                  "type": "string",
                  "description": "File path"
                },
                "action": {
                  "type": "string",
                  "enum": ["create", "modify", "delete", "rename"],
                  "description": "Action to perform on file"
                },
                "change_description": {
                  "type": "string",
                  "description": "Description of changes to make"
                }
              }
            },
            "description": "Files affected by this task"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Task IDs this task depends on"
          },
          "strategic_step_reference": {
            "type": "string",
            "description": "Reference to strategic plan step (e.g., 'step-0', 'step-1')"
          }
        }
      },
      "minItems": 1
    },
    "file_specifications": {
      "type": "array",
      "description": "Detailed file-level change specifications",
      "items": {
        "type": "object",
        "required": ["file_path", "action"],
        "properties": {
          "file_path": {
            "type": "string",
            "description": "Path to file"
          },
          "action": {
            "type": "string",
            "enum": ["create", "modify", "delete", "rename"],
            "description": "Action to perform"
          },
          "changes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "line_range": {
                  "type": "object",
                  "properties": {
                    "start": {
                      "type": "integer"
                    },
                    "end": {
                      "type": "integer"
                    }
                  }
                },
                "description": {
                  "type": "string"
                },
                "code": {
                  "type": "string",
                  "description": "Code snippet to add/replace"
                }
              }
            }
          },
          "strategic_context": {
            "type": "string",
            "description": "Context from strategic plan"
          }
        }
      }
    },
    "traceability": {
      "type": "object",
      "description": "Links between implementation and strategic plan",
      "properties": {
        "strategic_plan_reference": {
          "type": "string",
          "description": "Path to strategic plan"
        },
        "workflow_id": {
          "type": "string",
          "description": "Shared workflow ID"
        }
      }
    }
  }
}
