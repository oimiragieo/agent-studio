{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Compliance Validation",
  "description": "Schema for compliance-validation.json produced during enterprise security architecture review.",
  "type": "object",
  "required": ["workflow_id", "generated_at", "frameworks", "status"],
  "properties": {
    "workflow_id": { "type": "string" },
    "generated_at": { "type": "string", "format": "date-time" },
    "frameworks": { "type": "array", "items": { "type": "string" } },
    "status": { "type": "string", "enum": ["pass", "fail", "partial", "unknown"] },
    "findings": { "type": "array", "items": { "type": "string" } },
    "recommendations": { "type": "array", "items": { "type": "string" } }
  },
  "additionalProperties": true
}
