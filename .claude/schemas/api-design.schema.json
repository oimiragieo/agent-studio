{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "API Design Specification",
  "description": "Schema for API design specification artifacts generated by api-designer agent",
  "required": ["specification_id", "specification_date", "api_type", "endpoints", "version"],
  "properties": {
    "specification_id": {
      "type": "string",
      "description": "Unique identifier for the API specification"
    },
    "specification_date": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when specification was created"
    },
    "designer": {
      "type": "string",
      "description": "Agent or user who created the specification"
    },
    "version": {
      "type": "string",
      "description": "API version (e.g., 'v1', '1.0.0')"
    },
    "api_type": {
      "type": "string",
      "enum": ["REST", "GraphQL", "gRPC", "WebSocket", "hybrid"],
      "description": "Type of API"
    },
    "base_url": {
      "type": "string",
      "description": "Base URL for the API"
    },
    "overview": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "intended_consumers": { "type": "array", "items": { "type": "string" } },
        "use_cases": { "type": "array", "items": { "type": "string" } }
      }
    },
    "authentication": {
      "type": "object",
      "properties": {
        "methods": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["api_key", "jwt", "oauth2", "basic", "bearer", "custom"]
          }
        },
        "oauth2_config": {
          "type": "object",
          "properties": {
            "grant_types": { "type": "array", "items": { "type": "string" } },
            "authorization_url": { "type": "string" },
            "token_url": { "type": "string" },
            "scopes": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            }
          }
        },
        "api_key_location": {
          "type": "string",
          "enum": ["header", "query", "cookie"]
        }
      }
    },
    "rate_limiting": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "default_limit": {
          "type": "object",
          "properties": {
            "requests": { "type": "integer" },
            "window_seconds": { "type": "integer" }
          }
        },
        "tiers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "tier_name": { "type": "string" },
              "requests": { "type": "integer" },
              "window_seconds": { "type": "integer" }
            }
          }
        },
        "headers": {
          "type": "object",
          "properties": {
            "limit_header": { "type": "string" },
            "remaining_header": { "type": "string" },
            "reset_header": { "type": "string" }
          }
        }
      }
    },
    "endpoints": {
      "type": "array",
      "description": "API endpoints",
      "items": {
        "type": "object",
        "required": ["path", "method", "description"],
        "properties": {
          "path": {
            "type": "string"
          },
          "method": {
            "type": "string",
            "enum": ["GET", "POST", "PUT", "PATCH", "DELETE", "HEAD", "OPTIONS"]
          },
          "description": {
            "type": "string"
          },
          "operation_id": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "parameters": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "in": { "type": "string", "enum": ["path", "query", "header", "cookie"] },
                "required": { "type": "boolean" },
                "type": { "type": "string" },
                "description": { "type": "string" },
                "schema": { "type": "object" }
              }
            }
          },
          "request_body": {
            "type": "object",
            "properties": {
              "required": { "type": "boolean" },
              "content_type": { "type": "string" },
              "schema": { "type": "object" },
              "examples": { "type": "object" }
            }
          },
          "responses": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "description": { "type": "string" },
                "content_type": { "type": "string" },
                "schema": { "type": "object" },
                "examples": { "type": "object" }
              }
            }
          },
          "streaming": {
            "type": "boolean",
            "description": "Whether this endpoint supports streaming responses"
          },
          "deprecated": {
            "type": "boolean"
          }
        }
      }
    },
    "schemas": {
      "type": "object",
      "description": "Shared schema definitions",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "properties": { "type": "object" },
          "required": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "error_handling": {
      "type": "object",
      "properties": {
        "error_format": {
          "type": "object",
          "properties": {
            "structure": { "type": "object" },
            "example": { "type": "object" }
          }
        },
        "error_codes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "code": { "type": "string" },
              "http_status": { "type": "integer" },
              "description": { "type": "string" },
              "resolution": { "type": "string" }
            }
          }
        },
        "retry_guidance": {
          "type": "object",
          "properties": {
            "retryable_codes": { "type": "array", "items": { "type": "integer" } },
            "backoff_strategy": { "type": "string" }
          }
        }
      }
    },
    "webhooks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "event": { "type": "string" },
          "description": { "type": "string" },
          "payload_schema": { "type": "object" },
          "security": { "type": "object" }
        }
      }
    },
    "versioning": {
      "type": "object",
      "properties": {
        "strategy": {
          "type": "string",
          "enum": ["url_path", "header", "query_param"]
        },
        "deprecation_policy": { "type": "string" },
        "sunset_period": { "type": "string" }
      }
    },
    "security_considerations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "concern": { "type": "string" },
          "mitigation": { "type": "string" }
        }
      }
    },
    "performance_requirements": {
      "type": "object",
      "properties": {
        "target_latency_p50_ms": { "type": "number" },
        "target_latency_p95_ms": { "type": "number" },
        "target_latency_p99_ms": { "type": "number" },
        "max_payload_size_mb": { "type": "number" },
        "expected_throughput_rps": { "type": "number" }
      }
    },
    "openapi_spec": {
      "type": "string",
      "description": "Path to generated OpenAPI specification file"
    }
  }
}
