{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Multi-Level Fallback Report",
  "type": "object",
  "required": ["report_id", "timestamp", "primary_agent", "fallback_chain"],
  "properties": {
    "report_id": {
      "type": "string",
      "description": "Unique identifier for this fallback report"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the fallback was triggered"
    },
    "primary_agent": {
      "type": "string",
      "description": "Agent that initially failed"
    },
    "failure_reason": {
      "type": "string",
      "description": "Reason for primary agent failure"
    },
    "fallback_chain": {
      "type": "array",
      "description": "Sequence of fallback attempts",
      "items": {
        "type": "object",
        "required": ["level", "agent", "status"],
        "properties": {
          "level": {
            "type": "integer",
            "description": "Fallback level (1 = first fallback, 2 = second, etc.)"
          },
          "agent": {
            "type": "string",
            "description": "Fallback agent name"
          },
          "status": {
            "enum": ["success", "failed", "skipped"],
            "description": "Result of this fallback attempt"
          },
          "started_at": {
            "type": "string",
            "format": "date-time"
          },
          "completed_at": {
            "type": "string",
            "format": "date-time"
          },
          "duration_ms": {
            "type": "integer"
          },
          "error": {
            "type": "string",
            "description": "Error message if failed"
          },
          "artifacts_produced": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "final_status": {
      "enum": ["resolved", "escalated", "failed"],
      "description": "Final outcome after all fallback attempts"
    },
    "successful_agent": {
      "type": "string",
      "description": "Agent that successfully completed the task"
    },
    "total_duration_ms": {
      "type": "integer",
      "description": "Total time from initial failure to resolution"
    },
    "escalation_details": {
      "type": "object",
      "properties": {
        "escalated_to": {
          "type": "string"
        },
        "reason": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "lessons_learned": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
