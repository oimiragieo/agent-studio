{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Legacy System Analysis",
  "description": "Schema for legacy-analysis.json produced by legacy modernization workflows.",
  "type": "object",
  "required": ["workflow_id", "generated_at", "summary"],
  "properties": {
    "workflow_id": { "type": "string" },
    "generated_at": { "type": "string", "format": "date-time" },
    "summary": { "type": "string", "minLength": 1 },
    "tech_stack": { "type": "array", "items": { "type": "string" } },
    "risks": { "type": "array", "items": { "type": "string" } },
    "integration_points": { "type": "array", "items": { "type": "string" } },
    "recommendations": { "type": "array", "items": { "type": "string" } }
  },
  "additionalProperties": true
}
