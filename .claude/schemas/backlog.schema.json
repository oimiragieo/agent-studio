{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Product Backlog",
  "description": "Schema for product backlog artifacts",
  "required": ["product_name", "items"],
  "properties": {
    "product_name": {
      "type": "string",
      "description": "Name of the product"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["epic", "story", "task", "bug"]
          },
          "title": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "status": {
            "type": "string",
            "enum": ["backlog", "sprint", "in-progress", "done"]
          }
        },
        "required": ["id", "type", "title"]
      }
    },
    "sprint_planning": {
      "type": "object",
      "properties": {
        "current_sprint": {
          "type": "string"
        },
        "sprint_goal": {
          "type": "string"
        }
      }
    }
  }
}

