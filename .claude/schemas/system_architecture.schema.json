{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "System Architecture",
  "description": "Schema for system architecture artifacts generated by Architect agent",
  "required": ["system_name", "overview", "technology_stack", "architecture_principles"],
  "properties": {
    "system_name": {
      "type": "string",
      "description": "Name of the system"
    },
    "overview": {
      "type": "string",
      "description": "High-level architecture overview"
    },
    "architecture_principles": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Core architectural principles and design decisions"
    },
    "technology_stack": {
      "type": "object",
      "properties": {
        "frontend": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "backend": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "database": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "infrastructure": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["frontend", "backend", "database"]
    },
    "component_architecture": {
      "type": "object",
      "description": "System components and their interactions"
    },
    "database_design": {
      "type": "object",
      "properties": {
        "schema": {
          "type": "object"
        },
        "relationships": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      }
    },
    "api_design": {
      "type": "object",
      "properties": {
        "endpoints": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "method": {
                "type": "string"
              },
              "path": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            }
          }
        },
        "authentication": {
          "type": "string"
        }
      }
    },
    "security_architecture": {
      "type": "object",
      "properties": {
        "authentication": {
          "type": "string"
        },
        "authorization": {
          "type": "string"
        },
        "data_protection": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "performance_considerations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "scalability_plan": {
      "type": "string",
      "description": "Plan for system scaling"
    },
    "integration_points": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "service": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "deployment_architecture": {
      "type": "object",
      "description": "Deployment and infrastructure architecture"
    }
  }
}
