{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://claude-code.anthropic.com/schemas/skill-manifest",
  "title": "Skill Manifest",
  "description": "Schema for validating skill implementation manifests",
  "type": "object",
  "required": ["name", "version", "description"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Skill name in lowercase-with-hyphens format"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "description": "Brief description of the skill's purpose"
    },
    "author": {
      "type": "string",
      "description": "Skill author or maintainer"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Categorization tags for discovery"
    },
    "tools": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Claude Code tools this skill requires"
    },
    "requiredFiles": {
      "type": "object",
      "properties": {
        "skillMd": { "type": "boolean", "default": true },
        "schemas": { "type": "boolean", "default": false },
        "scripts": { "type": "boolean", "default": false },
        "hooks": { "type": "boolean", "default": false }
      },
      "description": "Required file types for this skill"
    },
    "dependencies": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Other skills this skill depends on"
    },
    "integrations": {
      "type": "object",
      "properties": {
        "agents": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Agents that can use this skill"
        },
        "workflows": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Workflows that reference this skill"
        }
      },
      "description": "Integration points with other framework components"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Additional skill metadata"
    }
  },
  "additionalProperties": false
}
