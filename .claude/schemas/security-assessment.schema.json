{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Security Assessment",
  "description": "Schema for security assessment artifacts generated by security-architect agent during incident response",
  "required": ["assessment_id", "assessment_date", "threat_level", "breach_indicators", "recommendations"],
  "properties": {
    "assessment_id": {
      "type": "string",
      "description": "Unique identifier for the security assessment"
    },
    "assessment_date": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when assessment was performed"
    },
    "assessor": {
      "type": "string",
      "description": "Agent or user who performed the assessment"
    },
    "threat_level": {
      "type": "string",
      "enum": ["critical", "high", "medium", "low", "none"],
      "description": "Overall threat level assessment"
    },
    "incident_classification": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["data_breach", "unauthorized_access", "malware", "ddos", "insider_threat", "configuration_error", "unknown", "not_security_related"],
          "description": "Type of security incident"
        },
        "confidence": {
          "type": "string",
          "enum": ["confirmed", "suspected", "investigating"],
          "description": "Confidence in the classification"
        }
      }
    },
    "breach_indicators": {
      "type": "object",
      "properties": {
        "breach_detected": {
          "type": "boolean",
          "description": "Whether a security breach was detected"
        },
        "indicators_of_compromise": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "indicator": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": ["ip_address", "domain", "file_hash", "behavior", "credential", "other"]
              },
              "severity": {
                "type": "string",
                "enum": ["critical", "high", "medium", "low"]
              },
              "evidence": {
                "type": "string"
              }
            }
          }
        },
        "attack_vectors": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Identified or suspected attack vectors"
        }
      }
    },
    "vulnerability_assessment": {
      "type": "object",
      "properties": {
        "vulnerabilities_exploited": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "cve_id": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": ["critical", "high", "medium", "low"]
              },
              "affected_systems": {
                "type": "array",
                "items": { "type": "string" }
              },
              "patch_available": {
                "type": "boolean"
              }
            }
          }
        },
        "misconfigurations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "issue": { "type": "string" },
              "risk_level": { "type": "string", "enum": ["critical", "high", "medium", "low"] },
              "affected_resource": { "type": "string" }
            }
          }
        }
      }
    },
    "data_exposure": {
      "type": "object",
      "properties": {
        "data_exposed": {
          "type": "boolean"
        },
        "data_types": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["pii", "phi", "financial", "credentials", "proprietary", "public", "other"]
          }
        },
        "estimated_records": {
          "type": "integer",
          "minimum": 0
        },
        "affected_users": {
          "type": "integer",
          "minimum": 0
        },
        "data_exfiltration_confirmed": {
          "type": "boolean"
        }
      }
    },
    "compliance_impact": {
      "type": "object",
      "properties": {
        "regulations_affected": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["GDPR", "HIPAA", "PCI-DSS", "SOC2", "CCPA", "SOX", "other"]
          }
        },
        "notification_required": {
          "type": "boolean"
        },
        "notification_deadline": {
          "type": "string",
          "description": "Deadline for regulatory notification if required"
        },
        "potential_penalties": {
          "type": "string"
        }
      }
    },
    "forensic_preservation": {
      "type": "object",
      "properties": {
        "evidence_preserved": {
          "type": "boolean"
        },
        "preserved_artifacts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "artifact_type": { "type": "string" },
              "location": { "type": "string" },
              "hash": { "type": "string" },
              "timestamp": { "type": "string", "format": "date-time" }
            }
          }
        },
        "chain_of_custody": {
          "type": "boolean"
        }
      }
    },
    "containment_status": {
      "type": "object",
      "properties": {
        "threat_contained": {
          "type": "boolean"
        },
        "containment_actions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "action": { "type": "string" },
              "status": { "type": "string", "enum": ["completed", "in_progress", "pending", "blocked"] },
              "timestamp": { "type": "string", "format": "date-time" }
            }
          }
        },
        "isolation_measures": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "recommendations": {
      "type": "array",
      "description": "Security recommendations",
      "items": {
        "type": "object",
        "required": ["action", "priority", "category"],
        "properties": {
          "action": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": ["P0", "P1", "P2", "P3"]
          },
          "category": {
            "type": "string",
            "enum": ["immediate", "containment", "eradication", "recovery", "prevention"]
          },
          "owner": {
            "type": "string"
          },
          "estimated_effort": {
            "type": "string"
          }
        }
      }
    },
    "risk_assessment": {
      "type": "object",
      "properties": {
        "current_risk_level": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low"]
        },
        "risk_after_mitigation": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low"]
        },
        "ongoing_threats": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
