{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Publish Status",
  "description": "Schema for publish-status.json outputs produced by artifact-publisher steps.",
  "type": "object",
  "required": ["workflow_id", "generated_at", "targets", "result"],
  "properties": {
    "workflow_id": { "type": "string" },
    "generated_at": { "type": "string", "format": "date-time" },
    "targets": { "type": "array", "items": { "type": "string" } },
    "result": { "type": "string", "enum": ["success", "partial", "failed"] },
    "published": { "type": "array", "items": { "type": "string" } },
    "failed": { "type": "array", "items": { "type": "string" } },
    "notes": { "type": "string" }
  },
  "additionalProperties": true
}
