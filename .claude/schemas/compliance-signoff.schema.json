{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://llm-rules.com/schemas/compliance-signoff.schema.json",
  "title": "Compliance Signoff",
  "description": "Compliance signoff artifact for regulatory requirements (GDPR, HIPAA, SOC2, PCI-DSS)",
  "type": "object",
  "required": [
    "workflow_id",
    "signoff_agent",
    "timestamp",
    "verdict",
    "regulations_checked",
    "violations_found",
    "remediation_complete"
  ],
  "properties": {
    "workflow_id": {
      "type": "string",
      "description": "Unique identifier for the workflow",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "signoff_agent": {
      "type": "string",
      "description": "Agent providing the signoff",
      "enum": ["compliance-auditor"]
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of signoff",
      "format": "date-time"
    },
    "verdict": {
      "type": "string",
      "description": "Final compliance verdict",
      "enum": ["approved", "approved_with_conditions", "rejected"]
    },
    "regulations_checked": {
      "type": "array",
      "description": "List of regulations checked",
      "items": {
        "type": "string",
        "enum": ["GDPR", "HIPAA", "SOC2", "PCI-DSS", "CCPA", "FERPA", "COPPA", "GLBA", "FISMA", "FedRAMP", "ISO27001", "NIST"]
      }
    },
    "violations_found": {
      "type": "integer",
      "description": "Total number of compliance violations found",
      "minimum": 0
    },
    "remediation_complete": {
      "type": "boolean",
      "description": "Whether all violations have been remediated"
    },
    "gdpr_assessment": {
      "type": "object",
      "description": "GDPR compliance assessment",
      "properties": {
        "applicable": {
          "type": "boolean"
        },
        "compliant": {
          "type": "boolean"
        },
        "requirements": {
          "type": "object",
          "properties": {
            "data_protection_by_design": {
              "type": "boolean"
            },
            "data_protection_by_default": {
              "type": "boolean"
            },
            "right_to_be_forgotten": {
              "type": "boolean"
            },
            "data_portability": {
              "type": "boolean"
            },
            "consent_management": {
              "type": "boolean"
            },
            "breach_notification": {
              "type": "boolean"
            },
            "dpo_appointed": {
              "type": "boolean"
            }
          }
        },
        "violations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "requirement": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": ["critical", "high", "medium", "low"]
              },
              "description": {
                "type": "string"
              },
              "remediation": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "hipaa_assessment": {
      "type": "object",
      "description": "HIPAA compliance assessment",
      "properties": {
        "applicable": {
          "type": "boolean"
        },
        "compliant": {
          "type": "boolean"
        },
        "requirements": {
          "type": "object",
          "properties": {
            "privacy_rule": {
              "type": "boolean"
            },
            "security_rule": {
              "type": "boolean"
            },
            "breach_notification_rule": {
              "type": "boolean"
            },
            "enforcement_rule": {
              "type": "boolean"
            },
            "phi_protection": {
              "type": "boolean"
            },
            "access_controls": {
              "type": "boolean"
            },
            "audit_controls": {
              "type": "boolean"
            },
            "baa_in_place": {
              "type": "boolean",
              "description": "Business Associate Agreement"
            }
          }
        },
        "violations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "requirement": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": ["critical", "high", "medium", "low"]
              },
              "description": {
                "type": "string"
              },
              "remediation": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "soc2_assessment": {
      "type": "object",
      "description": "SOC2 compliance assessment",
      "properties": {
        "applicable": {
          "type": "boolean"
        },
        "compliant": {
          "type": "boolean"
        },
        "trust_service_criteria": {
          "type": "object",
          "properties": {
            "security": {
              "type": "boolean"
            },
            "availability": {
              "type": "boolean"
            },
            "processing_integrity": {
              "type": "boolean"
            },
            "confidentiality": {
              "type": "boolean"
            },
            "privacy": {
              "type": "boolean"
            }
          }
        },
        "violations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "criterion": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": ["critical", "high", "medium", "low"]
              },
              "description": {
                "type": "string"
              },
              "remediation": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "pci_dss_assessment": {
      "type": "object",
      "description": "PCI-DSS compliance assessment",
      "properties": {
        "applicable": {
          "type": "boolean"
        },
        "compliant": {
          "type": "boolean"
        },
        "requirements": {
          "type": "object",
          "properties": {
            "secure_network": {
              "type": "boolean"
            },
            "cardholder_data_protection": {
              "type": "boolean"
            },
            "vulnerability_management": {
              "type": "boolean"
            },
            "access_control": {
              "type": "boolean"
            },
            "network_monitoring": {
              "type": "boolean"
            },
            "information_security_policy": {
              "type": "boolean"
            }
          }
        },
        "violations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "requirement": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": ["critical", "high", "medium", "low"]
              },
              "description": {
                "type": "string"
              },
              "remediation": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "data_privacy_assessment": {
      "type": "object",
      "description": "General data privacy assessment",
      "properties": {
        "pii_handling": {
          "type": "object",
          "properties": {
            "pii_identified": {
              "type": "boolean"
            },
            "protection_adequate": {
              "type": "boolean"
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "data_retention": {
          "type": "object",
          "properties": {
            "policy_defined": {
              "type": "boolean"
            },
            "compliant": {
              "type": "boolean"
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "consent_management": {
          "type": "object",
          "properties": {
            "implemented": {
              "type": "boolean"
            },
            "compliant": {
              "type": "boolean"
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "audit_logging": {
      "type": "object",
      "description": "Audit logging assessment",
      "properties": {
        "implemented": {
          "type": "boolean"
        },
        "comprehensive": {
          "type": "boolean"
        },
        "retention_compliant": {
          "type": "boolean"
        },
        "issues": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "violations_detail": {
      "type": "array",
      "description": "Detailed list of all compliance violations",
      "items": {
        "type": "object",
        "required": ["regulation", "severity", "description", "status"],
        "properties": {
          "regulation": {
            "type": "string"
          },
          "requirement": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "description": {
            "type": "string",
            "minLength": 20
          },
          "status": {
            "type": "string",
            "enum": ["open", "remediated", "accepted_risk", "false_positive"]
          },
          "remediation": {
            "type": "string"
          },
          "remediation_deadline": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    "approval_conditions": {
      "type": "array",
      "description": "Conditions for approval (if verdict is approved_with_conditions)",
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "rejection_reasons": {
      "type": "array",
      "description": "Reasons for rejection (if verdict is rejected)",
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "recommendations": {
      "type": "array",
      "description": "Compliance recommendations",
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "signoff_notes": {
      "type": "string",
      "description": "Additional notes from compliance auditor"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "verdict": {
            "const": "approved_with_conditions"
          }
        }
      },
      "then": {
        "required": ["approval_conditions"]
      }
    },
    {
      "if": {
        "properties": {
          "verdict": {
            "const": "rejected"
          }
        }
      },
      "then": {
        "required": ["rejection_reasons"]
      }
    }
  ]
}
