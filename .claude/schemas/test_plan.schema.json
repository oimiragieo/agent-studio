{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Test Plan",
  "description": "Schema for test plan artifacts generated by QA agent",
  "required": ["feature_name", "overview", "test_strategy"],
  "properties": {
    "feature_name": {
      "type": "string",
      "description": "Name of the feature being tested"
    },
    "overview": {
      "type": "string",
      "description": "Test plan overview and scope"
    },
    "test_strategy": {
      "type": "string",
      "description": "Overall testing approach and methodology"
    },
    "test_levels": {
      "type": "object",
      "properties": {
        "unit": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "component": {
                "type": "string"
              },
              "test_cases": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "integration": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "e2e": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      }
    },
    "test_scenarios": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "given": {
            "type": "string"
          },
          "when": {
            "type": "string"
          },
          "then": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          }
        },
        "required": ["id", "name", "given", "when", "then"]
      }
    },
    "test_data_requirements": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "quality_gates": {
      "type": "object",
      "properties": {
        "coverage_threshold": {
          "type": "number"
        },
        "required_tests": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "test_execution_plan": {
      "type": "object",
      "properties": {
        "phase": {
          "type": "string"
        },
        "duration": {
          "type": "string"
        },
        "resources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}

