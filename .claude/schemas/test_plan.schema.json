{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Test Plan",
  "description": "Schema for test plan artifacts generated by QA agent",
  "required": ["feature_name", "overview", "test_strategy"],
  "properties": {
    "feature_name": {
      "type": "string",
      "description": "Name of the feature being tested"
    },
    "overview": {
      "type": "string",
      "description": "Test plan overview and scope"
    },
    "test_strategy": {
      "type": "string",
      "description": "Overall testing approach and methodology"
    },
    "test_levels": {
      "type": "object",
      "properties": {
        "unit": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "component": {
                "type": "string"
              },
              "test_cases": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "integration": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "e2e": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      }
    },
    "test_scenarios": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "given": {
            "type": "string"
          },
          "when": {
            "type": "string"
          },
          "then": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          }
        },
        "required": ["id", "name", "given", "when", "then"]
      }
    },
    "test_data_requirements": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "quality_gates": {
      "type": "object",
      "properties": {
        "coverage_threshold": {
          "type": "number"
        },
        "required_tests": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "test_execution_plan": {
      "type": "object",
      "properties": {
        "phase": {
          "type": "string"
        },
        "duration": {
          "type": "string"
        },
        "resources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "local_emulation": {
      "type": "object",
      "description": "Local emulation strategy for cloud services",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether local emulation is enabled"
        },
        "emulators": {
          "type": "array",
          "description": "List of emulators to use for local testing",
          "items": {
            "type": "object",
            "properties": {
              "service": {
                "type": "string",
                "description": "Cloud service name (e.g., pubsub, datastore, storage)"
              },
              "emulator": {
                "type": "string",
                "description": "Emulator name (e.g., pubsub-emulator, datastore-emulator, testcontainers)"
              },
              "port": {
                "type": "number",
                "description": "Port number for emulator"
              },
              "config": {
                "type": "object",
                "description": "Emulator-specific configuration"
              }
            },
            "required": ["service", "emulator"]
          }
        },
        "emulator_config": {
          "type": "object",
          "description": "Configuration for each emulator",
          "additionalProperties": {
            "type": "object",
            "description": "Emulator-specific configuration"
          }
        },
        "test_environment": {
          "type": "string",
          "enum": ["local", "staging", "production"],
          "description": "Primary test environment",
          "default": "local"
        },
        "docker_compose": {
          "type": "string",
          "description": "Path to docker-compose.yml for emulator setup"
        },
        "setup_instructions": {
          "type": "string",
          "description": "Instructions for setting up local emulators"
        }
      }
    }
  }
}

