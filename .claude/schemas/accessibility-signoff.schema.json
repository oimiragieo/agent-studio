{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://llm-rules.com/schemas/accessibility-signoff.schema.json",
  "title": "Accessibility Signoff",
  "description": "Accessibility signoff artifact for WCAG compliance and inclusive design",
  "type": "object",
  "required": [
    "workflow_id",
    "signoff_agent",
    "timestamp",
    "verdict",
    "wcag_level",
    "critical_issues",
    "keyboard_nav_verified",
    "screen_reader_tested"
  ],
  "properties": {
    "workflow_id": {
      "type": "string",
      "description": "Unique identifier for the workflow",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "signoff_agent": {
      "type": "string",
      "description": "Agent providing the signoff",
      "enum": ["accessibility-expert"]
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of signoff",
      "format": "date-time"
    },
    "verdict": {
      "type": "string",
      "description": "Final accessibility verdict",
      "enum": ["approved", "approved_with_conditions", "rejected"]
    },
    "wcag_level": {
      "type": "string",
      "description": "WCAG compliance level achieved",
      "enum": ["AAA", "AA", "A", "non-compliant"]
    },
    "critical_issues": {
      "type": "integer",
      "description": "Number of critical accessibility issues",
      "minimum": 0
    },
    "keyboard_nav_verified": {
      "type": "boolean",
      "description": "Whether keyboard navigation was verified"
    },
    "screen_reader_tested": {
      "type": "boolean",
      "description": "Whether screen reader compatibility was tested"
    },
    "wcag_assessment": {
      "type": "object",
      "description": "Detailed WCAG assessment",
      "properties": {
        "perceivable": {
          "type": "object",
          "description": "WCAG Principle 1: Perceivable",
          "properties": {
            "text_alternatives": {
              "type": "object",
              "properties": {
                "compliant": {
                  "type": "boolean"
                },
                "issues": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "time_based_media": {
              "type": "object",
              "properties": {
                "compliant": {
                  "type": "boolean"
                },
                "issues": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "adaptable": {
              "type": "object",
              "properties": {
                "compliant": {
                  "type": "boolean"
                },
                "issues": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "distinguishable": {
              "type": "object",
              "properties": {
                "compliant": {
                  "type": "boolean"
                },
                "color_contrast_ratio": {
                  "type": "number"
                },
                "issues": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "operable": {
          "type": "object",
          "description": "WCAG Principle 2: Operable",
          "properties": {
            "keyboard_accessible": {
              "type": "object",
              "properties": {
                "compliant": {
                  "type": "boolean"
                },
                "issues": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "enough_time": {
              "type": "object",
              "properties": {
                "compliant": {
                  "type": "boolean"
                },
                "issues": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "seizures_physical_reactions": {
              "type": "object",
              "properties": {
                "compliant": {
                  "type": "boolean"
                },
                "issues": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "navigable": {
              "type": "object",
              "properties": {
                "compliant": {
                  "type": "boolean"
                },
                "issues": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "input_modalities": {
              "type": "object",
              "properties": {
                "compliant": {
                  "type": "boolean"
                },
                "issues": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "understandable": {
          "type": "object",
          "description": "WCAG Principle 3: Understandable",
          "properties": {
            "readable": {
              "type": "object",
              "properties": {
                "compliant": {
                  "type": "boolean"
                },
                "issues": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "predictable": {
              "type": "object",
              "properties": {
                "compliant": {
                  "type": "boolean"
                },
                "issues": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "input_assistance": {
              "type": "object",
              "properties": {
                "compliant": {
                  "type": "boolean"
                },
                "issues": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "robust": {
          "type": "object",
          "description": "WCAG Principle 4: Robust",
          "properties": {
            "compatible": {
              "type": "object",
              "properties": {
                "compliant": {
                  "type": "boolean"
                },
                "issues": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "assistive_technology_testing": {
      "type": "object",
      "description": "Assistive technology testing results",
      "properties": {
        "screen_readers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Screen reader name (e.g., NVDA, JAWS, VoiceOver)"
              },
              "tested": {
                "type": "boolean"
              },
              "compatible": {
                "type": "boolean"
              },
              "issues": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "keyboard_only": {
          "type": "object",
          "properties": {
            "tested": {
              "type": "boolean"
            },
            "all_features_accessible": {
              "type": "boolean"
            },
            "focus_visible": {
              "type": "boolean"
            },
            "logical_tab_order": {
              "type": "boolean"
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "voice_control": {
          "type": "object",
          "properties": {
            "tested": {
              "type": "boolean"
            },
            "compatible": {
              "type": "boolean"
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "magnification": {
          "type": "object",
          "properties": {
            "tested": {
              "type": "boolean"
            },
            "scales_correctly": {
              "type": "boolean"
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "issues_found": {
      "type": "array",
      "description": "Accessibility issues found",
      "items": {
        "type": "object",
        "required": ["severity", "wcag_criterion", "description", "status"],
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "wcag_criterion": {
            "type": "string",
            "description": "WCAG success criterion (e.g., 1.4.3, 2.1.1)"
          },
          "wcag_level": {
            "type": "string",
            "enum": ["A", "AA", "AAA"]
          },
          "description": {
            "type": "string",
            "minLength": 20
          },
          "location": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["open", "fixed", "wont_fix", "deferred"]
          },
          "remediation": {
            "type": "string"
          },
          "user_impact": {
            "type": "string",
            "description": "Impact on users with disabilities"
          }
        }
      }
    },
    "aria_assessment": {
      "type": "object",
      "description": "ARIA implementation assessment",
      "properties": {
        "aria_used": {
          "type": "boolean"
        },
        "aria_correct": {
          "type": "boolean"
        },
        "aria_issues": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "semantic_html_assessment": {
      "type": "object",
      "description": "Semantic HTML assessment",
      "properties": {
        "semantic_elements_used": {
          "type": "boolean"
        },
        "heading_hierarchy_correct": {
          "type": "boolean"
        },
        "landmarks_used": {
          "type": "boolean"
        },
        "issues": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "approval_conditions": {
      "type": "array",
      "description": "Conditions for approval (if verdict is approved_with_conditions)",
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "rejection_reasons": {
      "type": "array",
      "description": "Reasons for rejection (if verdict is rejected)",
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "recommendations": {
      "type": "array",
      "description": "Accessibility recommendations",
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "signoff_notes": {
      "type": "string",
      "description": "Additional notes from accessibility expert"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "verdict": {
            "const": "approved_with_conditions"
          }
        }
      },
      "then": {
        "required": ["approval_conditions"]
      }
    },
    {
      "if": {
        "properties": {
          "verdict": {
            "const": "rejected"
          }
        }
      },
      "then": {
        "required": ["rejection_reasons"]
      }
    }
  ]
}
