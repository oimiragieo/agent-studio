{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "fallback-routing-report.schema.json",
  "title": "Fallback Routing Report",
  "description": "Schema for fallback routing reports",
  "type": "object",
  "required": ["timestamp", "primary_route", "fallback_triggered"],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of the routing event"
    },
    "primary_route": {
      "type": "string",
      "description": "Primary agent or route that was initially targeted"
    },
    "fallback_triggered": {
      "type": "boolean",
      "description": "Whether fallback routing was triggered"
    },
    "fallback_route": {
      "type": "string",
      "description": "Fallback agent or route used (if triggered)"
    },
    "reason": {
      "type": "string",
      "description": "Reason for fallback routing"
    },
    "resolution_time_ms": {
      "type": "integer",
      "minimum": 0,
      "description": "Time taken to resolve routing in milliseconds"
    },
    "context_preserved": {
      "type": "boolean",
      "description": "Whether context was preserved during routing"
    },
    "fallback_attempt_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of fallback attempts made"
    },
    "success": {
      "type": "boolean",
      "description": "Whether the fallback routing succeeded"
    },
    "error": {
      "type": "string",
      "description": "Error message if routing failed"
    }
  }
}
