{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://claude-code.anthropic.com/schemas/skill-scaffolder-output.schema.json",
  "title": "Scaffolder Skill Output Verification",
  "description": "Verifiable output from the scaffolder skill that proves code generation occurred with rule compliance",
  "type": "object",
  "required": [
    "skill_name",
    "files_generated",
    "patterns_applied",
    "rule_index_consulted",
    "timestamp"
  ],
  "properties": {
    "skill_name": {
      "type": "string",
      "const": "scaffolder",
      "description": "Must be 'scaffolder' to verify correct skill was used"
    },
    "files_generated": {
      "type": "array",
      "description": "List of files created by scaffolder with absolute paths",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["path", "type", "lines_of_code"],
        "properties": {
          "path": {
            "type": "string",
            "description": "Absolute file path of generated file"
          },
          "type": {
            "type": "string",
            "enum": ["component", "api", "test", "type", "config", "util"],
            "description": "Type of file generated"
          },
          "lines_of_code": {
            "type": "number",
            "minimum": 1,
            "description": "Number of lines generated (proof of non-empty output)"
          }
        },
        "additionalProperties": false
      }
    },
    "patterns_applied": {
      "type": "array",
      "description": "Code patterns applied during generation (proves rule compliance)",
      "minItems": 1,
      "items": {
        "type": "string"
      },
      "examples": [
        "React functional component with hooks",
        "FastAPI route with Pydantic validation",
        "TypeScript interface with strict typing"
      ]
    },
    "rules_loaded": {
      "type": "array",
      "description": "Rule files consulted during generation",
      "items": {
        "type": "string"
      },
      "examples": [
        ".claude/rules-master/TECH_STACK_NEXTJS.md",
        ".claude/rules-library/react-hooks.md"
      ]
    },
    "rule_index_consulted": {
      "type": "boolean",
      "description": "Whether rule index was queried (must be true for dynamic rule discovery)"
    },
    "template_used": {
      "type": "string",
      "description": "Template or boilerplate pattern used as base"
    },
    "component_type": {
      "type": "string",
      "description": "Type of component scaffolded",
      "examples": ["UserProfile", "LoginAPI", "ProductService"]
    },
    "technology_stack": {
      "type": "array",
      "description": "Technologies detected and used in generation",
      "items": {
        "type": "string"
      },
      "examples": ["nextjs", "typescript", "tailwindcss"]
    },
    "supporting_files": {
      "type": "array",
      "description": "Additional files created (types, tests, loading states)",
      "items": {
        "type": "string"
      }
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of skill execution"
    }
  },
  "additionalProperties": false
}
