{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Code Review",
  "description": "Schema for code review artifacts generated by code-reviewer agent",
  "required": ["review_id", "review_date", "overall_quality", "status", "findings"],
  "properties": {
    "review_id": {
      "type": "string",
      "description": "Unique identifier for the code review"
    },
    "review_date": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the review was performed"
    },
    "reviewer": {
      "type": "string",
      "description": "Agent or user who performed the review"
    },
    "scope": {
      "type": "object",
      "properties": {
        "files_reviewed": {
          "type": "integer",
          "description": "Number of files reviewed",
          "minimum": 0
        },
        "total_lines": {
          "type": "integer",
          "description": "Total lines of code reviewed",
          "minimum": 0
        },
        "target_files": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of file paths reviewed"
        }
      }
    },
    "overall_quality": {
      "type": "number",
      "description": "Overall quality rating (1-10)",
      "minimum": 1,
      "maximum": 10
    },
    "status": {
      "type": "string",
      "enum": ["approved", "needs_changes", "blocked"],
      "description": "Review status"
    },
    "findings": {
      "type": "array",
      "description": "Detailed findings from the code review",
      "items": {
        "type": "object",
        "required": ["category", "severity", "description"],
        "properties": {
          "category": {
            "type": "string",
            "enum": ["security", "performance", "code_quality", "maintainability", "design_pattern", "test_coverage", "documentation", "critical"],
            "description": "Category of the finding"
          },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical", "blocker"],
            "description": "Severity of the issue"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the finding"
          },
          "file": {
            "type": "string",
            "description": "File path where the issue was found"
          },
          "line": {
            "type": ["integer", "null"],
            "description": "Line number where the issue was found (if applicable)"
          },
          "recommendation": {
            "type": "string",
            "description": "Recommended fix for the issue"
          },
          "priority": {
            "type": "string",
            "enum": ["P0", "P1", "P2", "P3"],
            "description": "Priority ranking (P0 = highest)"
          }
        }
      }
    },
    "metrics": {
      "type": "object",
      "description": "Code quality metrics",
      "properties": {
        "complexity": {
          "type": "object",
          "properties": {
            "cyclomatic_complexity": {
              "type": "number"
            },
            "cognitive_complexity": {
              "type": "number"
            }
          }
        },
        "test_coverage": {
          "type": "number",
          "description": "Test coverage percentage",
          "minimum": 0,
          "maximum": 100
        },
        "code_smells": {
          "type": "integer",
          "description": "Number of code smells detected",
          "minimum": 0
        }
      }
    },
    "recommendations": {
      "type": "array",
      "description": "High-level recommendations for improvement",
      "items": {
        "type": "string"
      }
    },
    "security_checklist": {
      "type": "object",
      "description": "Security compliance checklist",
      "properties": {
        "input_validation": {
          "type": "boolean"
        },
        "authentication_authorization": {
          "type": "boolean"
        },
        "no_hardcoded_secrets": {
          "type": "boolean"
        },
        "sql_injection_prevention": {
          "type": "boolean"
        },
        "xss_prevention": {
          "type": "boolean"
        },
        "csrf_protection": {
          "type": "boolean"
        },
        "dependency_vulnerabilities_checked": {
          "type": "boolean"
        }
      }
    }
  }
}

