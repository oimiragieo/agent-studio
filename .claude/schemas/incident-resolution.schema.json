{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Incident Resolution Report",
  "description": "Schema for incident resolution validation artifacts generated during incident response workflow",
  "required": [
    "resolution_id",
    "resolution_date",
    "resolution_status",
    "root_cause",
    "fix_verification"
  ],
  "properties": {
    "resolution_id": {
      "type": "string",
      "description": "Unique identifier for the resolution report"
    },
    "resolution_date": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when resolution was completed"
    },
    "resolver": {
      "type": "string",
      "description": "Agent or user who verified the resolution"
    },
    "resolution_status": {
      "type": "string",
      "enum": ["resolved", "partially_resolved", "workaround_applied", "unresolved", "monitoring"],
      "description": "Current resolution status"
    },
    "incident_reference": {
      "type": "object",
      "properties": {
        "incident_id": {
          "type": "string"
        },
        "severity": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low"]
        },
        "original_reported_date": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "root_cause": {
      "type": "object",
      "required": ["identified", "description"],
      "properties": {
        "identified": {
          "type": "boolean",
          "description": "Whether root cause was identified"
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the root cause"
        },
        "category": {
          "type": "string",
          "enum": [
            "code_bug",
            "configuration",
            "infrastructure",
            "capacity",
            "dependency",
            "human_error",
            "security",
            "unknown"
          ],
          "description": "Category of root cause"
        },
        "contributing_factors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "root_cause_chain": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "cause": { "type": "string" },
              "led_to": { "type": "string" }
            }
          },
          "description": "Chain of causes leading to the incident"
        }
      }
    },
    "fix_verification": {
      "type": "object",
      "required": ["fix_applied", "verification_passed"],
      "properties": {
        "fix_applied": {
          "type": "boolean"
        },
        "fix_description": {
          "type": "string"
        },
        "verification_passed": {
          "type": "boolean"
        },
        "verification_tests": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "test_name": { "type": "string" },
              "status": { "type": "string", "enum": ["passed", "failed", "skipped"] },
              "details": { "type": "string" }
            }
          }
        },
        "regression_tests_passed": {
          "type": "boolean"
        }
      }
    },
    "service_restoration": {
      "type": "object",
      "properties": {
        "services_restored": {
          "type": "boolean"
        },
        "restoration_time": {
          "type": "string",
          "format": "date-time"
        },
        "time_to_restore": {
          "type": "string",
          "description": "Duration from incident start to service restoration"
        },
        "restored_services": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "service": { "type": "string" },
              "status": {
                "type": "string",
                "enum": ["fully_restored", "partially_restored", "degraded"]
              },
              "restoration_time": { "type": "string", "format": "date-time" }
            }
          }
        },
        "health_checks_passed": {
          "type": "boolean"
        }
      }
    },
    "changes_applied": {
      "type": "array",
      "description": "Changes applied to resolve the incident",
      "items": {
        "type": "object",
        "properties": {
          "change_type": {
            "type": "string",
            "enum": [
              "code_change",
              "config_change",
              "rollback",
              "infrastructure",
              "hotfix",
              "patch"
            ]
          },
          "description": {
            "type": "string"
          },
          "commit_id": {
            "type": "string"
          },
          "applied_by": {
            "type": "string"
          },
          "applied_at": {
            "type": "string",
            "format": "date-time"
          },
          "reviewed": {
            "type": "boolean"
          }
        }
      }
    },
    "monitoring_updates": {
      "type": "object",
      "properties": {
        "new_alerts_added": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "alert_name": { "type": "string" },
              "condition": { "type": "string" },
              "threshold": { "type": "string" }
            }
          }
        },
        "dashboards_updated": {
          "type": "array",
          "items": { "type": "string" }
        },
        "runbooks_updated": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "impact_summary": {
      "type": "object",
      "properties": {
        "total_downtime": {
          "type": "string",
          "description": "Total duration of service impact"
        },
        "users_affected": {
          "type": "integer",
          "minimum": 0
        },
        "revenue_impact": {
          "type": "string"
        },
        "sla_breach": {
          "type": "boolean"
        },
        "sla_credits_required": {
          "type": "boolean"
        }
      }
    },
    "timeline": {
      "type": "object",
      "properties": {
        "detected_at": { "type": "string", "format": "date-time" },
        "acknowledged_at": { "type": "string", "format": "date-time" },
        "diagnosed_at": { "type": "string", "format": "date-time" },
        "fixed_at": { "type": "string", "format": "date-time" },
        "verified_at": { "type": "string", "format": "date-time" },
        "closed_at": { "type": "string", "format": "date-time" },
        "ttd": { "type": "string", "description": "Time to detect" },
        "ttr": { "type": "string", "description": "Time to resolve" }
      }
    }
  }
}
