{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Fix Suggestions",
  "description": "Schema for fix suggestions generated by developer agent during code review",
  "required": ["suggestions_id", "created_at", "total_suggestions", "fixes"],
  "properties": {
    "suggestions_id": {
      "type": "string",
      "description": "Unique identifier for the fix suggestions"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when suggestions were created"
    },
    "workflow_id": {
      "type": "string",
      "description": "Associated workflow ID"
    },
    "total_suggestions": {
      "type": "integer",
      "description": "Total number of fix suggestions",
      "minimum": 0
    },
    "fixes": {
      "type": "array",
      "description": "Array of fix suggestions",
      "items": {
        "type": "object",
        "required": ["fix_id", "issue_reference", "priority", "description", "suggested_fix"],
        "properties": {
          "fix_id": {
            "type": "string",
            "description": "Unique identifier for this fix suggestion"
          },
          "issue_reference": {
            "type": "string",
            "description": "Reference to the issue being addressed"
          },
          "priority": {
            "type": "string",
            "enum": ["P0", "P1", "P2", "P3"],
            "description": "Priority ranking (P0 = highest)"
          },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical", "blocker"],
            "description": "Severity of the issue being fixed"
          },
          "category": {
            "type": "string",
            "enum": [
              "security",
              "performance",
              "code_quality",
              "maintainability",
              "design_pattern",
              "test_coverage",
              "documentation"
            ],
            "description": "Category of the fix"
          },
          "description": {
            "type": "string",
            "description": "Description of the fix"
          },
          "file": {
            "type": "string",
            "description": "File path where the fix should be applied"
          },
          "line_range": {
            "type": "object",
            "properties": {
              "start": {
                "type": "integer",
                "minimum": 1
              },
              "end": {
                "type": "integer",
                "minimum": 1
              }
            },
            "description": "Line range affected by the fix"
          },
          "suggested_fix": {
            "type": "object",
            "required": ["type", "description"],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "code_change",
                  "refactor",
                  "add_feature",
                  "remove_code",
                  "design_pattern",
                  "security_patch"
                ],
                "description": "Type of fix"
              },
              "description": {
                "type": "string",
                "description": "Detailed description of the fix"
              },
              "code_example": {
                "type": "string",
                "description": "Code example demonstrating the fix"
              },
              "before": {
                "type": "string",
                "description": "Current code (before fix)"
              },
              "after": {
                "type": "string",
                "description": "Suggested code (after fix)"
              }
            }
          },
          "rationale": {
            "type": "string",
            "description": "Rationale for the suggested fix"
          },
          "impact": {
            "type": "object",
            "properties": {
              "complexity": {
                "type": "string",
                "enum": ["low", "medium", "high"],
                "description": "Implementation complexity"
              },
              "estimated_effort": {
                "type": "string",
                "description": "Estimated effort to implement (e.g., '30 minutes', '2 hours')"
              },
              "affected_components": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Components affected by this fix"
              }
            }
          },
          "related_issues": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Related issues that this fix addresses"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Other fixes this depends on"
          },
          "testing_recommendation": {
            "type": "string",
            "description": "Recommended testing approach for this fix"
          }
        }
      }
    },
    "refactoring_recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "files": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "design_pattern": {
            "type": "string",
            "description": "Suggested design pattern"
          },
          "benefits": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "description": "High-level refactoring recommendations"
    },
    "implementation_order": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Recommended order for implementing fixes (fix IDs in order)"
    }
  }
}
