{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://llm-rules.com/schemas/execution-mode.schema.json",
  "title": "CUJ Execution Mode Schema",
  "description": "Canonical schema for CUJ execution mode validation. Defines the three valid execution modes and their associated fields.",
  "version": "1.0.0",
  
  "definitions": {
    "execution_mode": {
      "type": "string",
      "enum": ["workflow", "skill-only", "manual-setup"],
      "description": "Canonical execution mode for CUJ execution"
    },
    
    "workflow_file": {
      "type": ["string", "null"],
      "pattern": "^\\.claude/workflows/[a-z0-9-]+\\.yaml$",
      "description": "Path to workflow YAML file. Required when execution_mode is 'workflow', null otherwise."
    },
    
    "primary_skill": {
      "type": ["string", "null"],
      "pattern": "^[a-z0-9-]+$",
      "description": "Primary skill name for skill-only CUJs. Required when execution_mode is 'skill-only', optional for 'workflow', null for 'manual-setup'."
    },
    
    "execution_config": {
      "type": "object",
      "properties": {
        "execution_mode": {
          "$ref": "#/definitions/execution_mode"
        },
        "workflow_file": {
          "$ref": "#/definitions/workflow_file"
        },
        "primary_skill": {
          "$ref": "#/definitions/primary_skill"
        },
        "supporting_skills": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "description": "Additional skills used by the CUJ"
        },
        "manual_steps": {
          "type": ["array", "null"],
          "items": {
            "type": "string"
          },
          "description": "Manual steps for manual-setup mode. Required when execution_mode is 'manual-setup'."
        }
      },
      "required": ["execution_mode"],
      "allOf": [
        {
          "if": {
            "properties": {
              "execution_mode": { "const": "workflow" }
            }
          },
          "then": {
            "properties": {
              "workflow_file": {
                "type": "string",
                "pattern": "^\\.claude/workflows/[a-z0-9-]+\\.yaml$"
              }
            },
            "required": ["workflow_file"]
          }
        },
        {
          "if": {
            "properties": {
              "execution_mode": { "const": "skill-only" }
            }
          },
          "then": {
            "properties": {
              "primary_skill": {
                "type": "string",
                "pattern": "^[a-z0-9-]+$"
              },
              "workflow_file": { "type": "null" }
            },
            "required": ["primary_skill"]
          }
        },
        {
          "if": {
            "properties": {
              "execution_mode": { "const": "manual-setup" }
            }
          },
          "then": {
            "properties": {
              "workflow_file": { "type": "null" },
              "primary_skill": { "type": "null" }
            }
          }
        }
      ]
    }
  },
  
  "type": "object",
  "$ref": "#/definitions/execution_config",
  
  "examples": [
    {
      "execution_mode": "workflow",
      "workflow_file": ".claude/workflows/greenfield-fullstack.yaml",
      "primary_skill": null,
      "supporting_skills": ["plan-generator", "response-rater"]
    },
    {
      "execution_mode": "skill-only",
      "workflow_file": null,
      "primary_skill": "rule-selector",
      "supporting_skills": []
    },
    {
      "execution_mode": "manual-setup",
      "workflow_file": null,
      "primary_skill": null,
      "manual_steps": [
        "Clone repository",
        "Run installation script",
        "Configure environment variables"
      ]
    }
  ]
}
