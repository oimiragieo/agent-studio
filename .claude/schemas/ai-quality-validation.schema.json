{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "AI Quality Validation",
  "description": "Schema for AI/LLM quality validation artifacts generated by QA agent for AI systems",
  "required": [
    "validation_id",
    "validation_date",
    "overall_status",
    "prompt_testing",
    "response_quality"
  ],
  "properties": {
    "validation_id": { "type": "string", "description": "Unique identifier for the AI validation" },
    "validation_date": { "type": "string", "format": "date-time" },
    "validator": { "type": "string" },
    "overall_status": { "type": "string", "enum": ["passed", "failed", "partial", "needs_review"] },
    "overall_score": { "type": "number", "minimum": 0, "maximum": 100 },
    "prompt_testing": {
      "type": "object",
      "required": ["tests_run", "tests_passed"],
      "properties": {
        "tests_run": { "type": "integer", "minimum": 0 },
        "tests_passed": { "type": "integer", "minimum": 0 },
        "tests_failed": { "type": "integer", "minimum": 0 },
        "test_results": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "test_id": { "type": "string" },
              "prompt": { "type": "string" },
              "expected_behavior": { "type": "string" },
              "actual_response": { "type": "string" },
              "status": { "type": "string", "enum": ["passed", "failed", "skipped"] },
              "failure_reason": { "type": "string" }
            }
          }
        },
        "prompt_injection_tests": {
          "type": "object",
          "properties": {
            "tests_run": { "type": "integer" },
            "vulnerabilities_found": { "type": "integer" },
            "details": { "type": "array", "items": { "type": "string" } }
          }
        }
      }
    },
    "response_quality": {
      "type": "object",
      "properties": {
        "accuracy_score": { "type": "number", "minimum": 0, "maximum": 100 },
        "relevance_score": { "type": "number", "minimum": 0, "maximum": 100 },
        "coherence_score": { "type": "number", "minimum": 0, "maximum": 100 },
        "completeness_score": { "type": "number", "minimum": 0, "maximum": 100 },
        "samples_evaluated": { "type": "integer", "minimum": 0 }
      }
    },
    "hallucination_detection": {
      "type": "object",
      "properties": {
        "tests_run": { "type": "integer", "minimum": 0 },
        "hallucinations_detected": { "type": "integer", "minimum": 0 },
        "hallucination_rate": { "type": "number", "minimum": 0, "maximum": 100 },
        "types_of_hallucinations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "factual_error",
                  "fabricated_source",
                  "invented_data",
                  "logical_inconsistency",
                  "other"
                ]
              },
              "count": { "type": "integer" },
              "examples": { "type": "array", "items": { "type": "string" } }
            }
          }
        }
      }
    },
    "edge_case_handling": {
      "type": "object",
      "properties": {
        "edge_cases_tested": { "type": "integer", "minimum": 0 },
        "handled_correctly": { "type": "integer", "minimum": 0 },
        "failure_modes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "edge_case": { "type": "string" },
              "expected_behavior": { "type": "string" },
              "actual_behavior": { "type": "string" },
              "severity": { "type": "string", "enum": ["critical", "high", "medium", "low"] }
            }
          }
        }
      }
    },
    "rag_validation": {
      "type": "object",
      "properties": {
        "retrieval_accuracy": { "type": "number", "minimum": 0, "maximum": 100 },
        "retrieval_recall": { "type": "number", "minimum": 0, "maximum": 100 },
        "context_relevance": { "type": "number", "minimum": 0, "maximum": 100 },
        "answer_faithfulness": { "type": "number", "minimum": 0, "maximum": 100 }
      }
    },
    "performance_benchmarks": {
      "type": "object",
      "properties": {
        "average_latency_ms": { "type": "number", "minimum": 0 },
        "p50_latency_ms": { "type": "number", "minimum": 0 },
        "p95_latency_ms": { "type": "number", "minimum": 0 },
        "p99_latency_ms": { "type": "number", "minimum": 0 },
        "throughput_rps": { "type": "number", "minimum": 0 },
        "meets_sla": { "type": "boolean" }
      }
    },
    "safety_guardrails": {
      "type": "object",
      "properties": {
        "guardrails_tested": { "type": "integer", "minimum": 0 },
        "guardrails_passed": { "type": "integer", "minimum": 0 },
        "bypass_attempts": { "type": "integer", "minimum": 0 },
        "successful_bypasses": { "type": "integer", "minimum": 0 }
      }
    },
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["issue", "severity", "category"],
        "properties": {
          "issue": { "type": "string" },
          "severity": { "type": "string", "enum": ["critical", "high", "medium", "low"] },
          "category": {
            "type": "string",
            "enum": [
              "accuracy",
              "safety",
              "performance",
              "reliability",
              "consistency",
              "hallucination"
            ]
          },
          "recommendation": { "type": "string" }
        }
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "recommendation": { "type": "string" },
          "priority": { "type": "string", "enum": ["P0", "P1", "P2", "P3"] },
          "category": { "type": "string" }
        }
      }
    }
  }
}
