{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Analysis Output Schema",
  "description": "Schema for analyst, architect, and code-reviewer agent outputs",
  "type": "object",
  "required": ["components_found", "patterns_extracted", "recommendations"],
  "properties": {
    "components_found": {
      "type": "array",
      "minItems": 1,
      "description": "List of components discovered during analysis",
      "items": {
        "type": "object",
        "required": ["name", "type", "location"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Component name"
          },
          "type": {
            "type": "string",
            "enum": ["file", "function", "class", "module", "service", "api", "component"],
            "description": "Component type"
          },
          "location": {
            "type": "string",
            "description": "File path or location identifier"
          },
          "description": {
            "type": "string",
            "description": "Component description"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of dependencies"
          }
        }
      }
    },
    "patterns_extracted": {
      "type": "array",
      "description": "Patterns identified in the codebase",
      "items": {
        "type": "object",
        "required": ["pattern", "occurrences"],
        "properties": {
          "pattern": {
            "type": "string",
            "description": "Pattern name or description"
          },
          "occurrences": {
            "type": "integer",
            "minimum": 1,
            "description": "Number of occurrences"
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Example locations or code snippets"
          },
          "category": {
            "type": "string",
            "enum": ["design-pattern", "anti-pattern", "architectural-pattern", "coding-pattern"],
            "description": "Pattern category"
          }
        }
      }
    },
    "recommendations": {
      "type": "array",
      "description": "Actionable recommendations based on analysis",
      "items": {
        "type": "object",
        "required": ["title", "priority"],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1,
            "description": "Recommendation title"
          },
          "description": {
            "type": "string",
            "description": "Detailed description"
          },
          "priority": {
            "type": "string",
            "enum": ["high", "medium", "low"],
            "description": "Priority level"
          },
          "effort": {
            "type": "string",
            "enum": ["small", "medium", "large"],
            "description": "Estimated effort"
          },
          "impact": {
            "type": "string",
            "enum": ["high", "medium", "low"],
            "description": "Expected impact"
          },
          "category": {
            "type": "string",
            "enum": ["performance", "security", "maintainability", "scalability", "reliability"],
            "description": "Recommendation category"
          }
        }
      }
    },
    "summary": {
      "type": "string",
      "description": "High-level summary of analysis findings"
    },
    "metrics": {
      "type": "object",
      "description": "Quantitative metrics from analysis",
      "properties": {
        "total_files": {
          "type": "integer",
          "minimum": 0
        },
        "total_lines": {
          "type": "integer",
          "minimum": 0
        },
        "complexity_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 10
        }
      }
    }
  }
}
