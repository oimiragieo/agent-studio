{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Implementation Output Schema",
  "description": "Schema for developer agent implementation outputs",
  "type": "object",
  "required": ["files_created", "files_modified", "tests_added"],
  "properties": {
    "files_created": {
      "type": "array",
      "description": "Files created during implementation",
      "items": {
        "type": "object",
        "required": ["path", "purpose"],
        "properties": {
          "path": {
            "type": "string",
            "minLength": 1,
            "description": "File path relative to project root"
          },
          "purpose": {
            "type": "string",
            "minLength": 1,
            "description": "Purpose of the file"
          },
          "lines": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of lines in the file"
          },
          "language": {
            "type": "string",
            "description": "Programming language"
          }
        }
      }
    },
    "files_modified": {
      "type": "array",
      "description": "Files modified during implementation",
      "items": {
        "type": "object",
        "required": ["path", "changes"],
        "properties": {
          "path": {
            "type": "string",
            "minLength": 1,
            "description": "File path relative to project root"
          },
          "changes": {
            "type": "string",
            "minLength": 1,
            "description": "Summary of changes made"
          },
          "lines_added": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of lines added"
          },
          "lines_removed": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of lines removed"
          }
        }
      }
    },
    "tests_added": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of test cases added"
    },
    "test_coverage": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Test coverage percentage"
    },
    "breaking_changes": {
      "type": "boolean",
      "description": "Whether implementation includes breaking changes"
    },
    "migration_notes": {
      "type": "string",
      "description": "Migration notes for breaking changes"
    },
    "dependencies_added": {
      "type": "array",
      "description": "Dependencies added during implementation",
      "items": {
        "type": "object",
        "required": ["name", "version"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "version": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": ["production", "development", "peer"]
          }
        }
      }
    },
    "documentation_updated": {
      "type": "boolean",
      "description": "Whether documentation was updated"
    },
    "performance_impact": {
      "type": "string",
      "enum": ["positive", "neutral", "negative", "unknown"],
      "description": "Expected performance impact"
    }
  }
}
