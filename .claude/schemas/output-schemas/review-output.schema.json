{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Review Output Schema",
  "description": "Schema for code review and QA agent outputs",
  "type": "object",
  "required": ["verdict", "issues_found", "score"],
  "properties": {
    "verdict": {
      "type": "string",
      "enum": ["PASS", "PASS_WITH_WARNINGS", "FAIL"],
      "description": "Overall review verdict"
    },
    "score": {
      "type": "number",
      "minimum": 0,
      "maximum": 10,
      "description": "Quality score (0-10)"
    },
    "issues_found": {
      "type": "array",
      "description": "Issues discovered during review",
      "items": {
        "type": "object",
        "required": ["severity", "category", "description", "location"],
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low", "info"],
            "description": "Issue severity level"
          },
          "category": {
            "type": "string",
            "enum": [
              "security",
              "performance",
              "maintainability",
              "correctness",
              "style",
              "documentation"
            ],
            "description": "Issue category"
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "description": "Issue description"
          },
          "location": {
            "type": "string",
            "minLength": 1,
            "description": "File path and line number"
          },
          "suggestion": {
            "type": "string",
            "description": "Suggested fix"
          },
          "code_snippet": {
            "type": "string",
            "description": "Code snippet showing the issue"
          }
        }
      }
    },
    "strengths": {
      "type": "array",
      "description": "Positive aspects identified",
      "items": {
        "type": "string"
      }
    },
    "recommendations": {
      "type": "array",
      "description": "Improvement recommendations",
      "items": {
        "type": "string"
      }
    },
    "test_results": {
      "type": "object",
      "description": "Test execution results",
      "properties": {
        "total_tests": {
          "type": "integer",
          "minimum": 0
        },
        "passed": {
          "type": "integer",
          "minimum": 0
        },
        "failed": {
          "type": "integer",
          "minimum": 0
        },
        "skipped": {
          "type": "integer",
          "minimum": 0
        },
        "coverage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        }
      }
    },
    "security_findings": {
      "type": "array",
      "description": "Security-specific findings",
      "items": {
        "type": "object",
        "required": ["type", "severity", "description"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["vulnerability", "hardcoded-secret", "insecure-config", "data-exposure"]
          },
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "remediation": {
            "type": "string"
          }
        }
      }
    },
    "compliance_status": {
      "type": "string",
      "enum": ["compliant", "non-compliant", "partially-compliant", "not-applicable"],
      "description": "Compliance status with standards"
    }
  }
}
