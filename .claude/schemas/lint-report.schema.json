{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lint Report",
  "description": "Schema for lint-report.json artifacts produced during PR creation flows.",
  "type": "object",
  "required": ["generated_at", "status"],
  "properties": {
    "generated_at": { "type": "string", "format": "date-time" },
    "status": { "type": "string", "enum": ["pass", "fail", "warning"] },
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "status"],
        "properties": {
          "name": { "type": "string" },
          "status": { "type": "string", "enum": ["pass", "fail", "warning", "skipped"] },
          "details": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "summary": { "type": "string" }
  },
  "additionalProperties": true
}
