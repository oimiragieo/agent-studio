{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Baseline Metrics",
  "description": "Schema for baseline performance metrics captured before optimization",
  "required": ["baseline_id", "capture_date", "target_system", "metrics"],
  "properties": {
    "baseline_id": { "type": "string", "description": "Unique identifier for baseline metrics" },
    "capture_date": { "type": "string", "format": "date-time" },
    "captured_by": { "type": "string" },
    "target_system": { "type": "string", "description": "System being measured" },
    "environment": { "type": "string", "enum": ["production", "staging", "development", "local"] },
    "capture_duration": { "type": "string", "description": "Duration of metrics capture period" },
    "metrics": {
      "type": "object",
      "required": ["response_time", "throughput"],
      "properties": {
        "response_time": {
          "type": "object",
          "properties": {
            "average_ms": { "type": "number", "minimum": 0 },
            "p50_ms": { "type": "number", "minimum": 0 },
            "p75_ms": { "type": "number", "minimum": 0 },
            "p90_ms": { "type": "number", "minimum": 0 },
            "p95_ms": { "type": "number", "minimum": 0 },
            "p99_ms": { "type": "number", "minimum": 0 },
            "max_ms": { "type": "number", "minimum": 0 }
          }
        },
        "throughput": {
          "type": "object",
          "properties": {
            "requests_per_second": { "type": "number", "minimum": 0 },
            "transactions_per_second": { "type": "number", "minimum": 0 },
            "concurrent_users": { "type": "integer", "minimum": 0 }
          }
        },
        "resource_utilization": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "object",
              "properties": {
                "average_percent": { "type": "number", "minimum": 0, "maximum": 100 },
                "peak_percent": { "type": "number", "minimum": 0, "maximum": 100 }
              }
            },
            "memory": {
              "type": "object",
              "properties": {
                "average_percent": { "type": "number", "minimum": 0, "maximum": 100 },
                "peak_percent": { "type": "number", "minimum": 0, "maximum": 100 },
                "used_mb": { "type": "number", "minimum": 0 }
              }
            },
            "disk": {
              "type": "object",
              "properties": {
                "read_iops": { "type": "number", "minimum": 0 },
                "write_iops": { "type": "number", "minimum": 0 },
                "latency_ms": { "type": "number", "minimum": 0 }
              }
            },
            "network": {
              "type": "object",
              "properties": {
                "bandwidth_mbps": { "type": "number", "minimum": 0 },
                "latency_ms": { "type": "number", "minimum": 0 },
                "packet_loss_percent": { "type": "number", "minimum": 0, "maximum": 100 }
              }
            }
          }
        },
        "database": {
          "type": "object",
          "properties": {
            "query_time_avg_ms": { "type": "number", "minimum": 0 },
            "query_time_p95_ms": { "type": "number", "minimum": 0 },
            "connections_active": { "type": "integer", "minimum": 0 },
            "connections_pool_utilization": { "type": "number", "minimum": 0, "maximum": 100 },
            "slow_queries_count": { "type": "integer", "minimum": 0 }
          }
        },
        "error_rates": {
          "type": "object",
          "properties": {
            "error_rate_percent": { "type": "number", "minimum": 0, "maximum": 100 },
            "timeout_rate_percent": { "type": "number", "minimum": 0, "maximum": 100 },
            "5xx_rate_percent": { "type": "number", "minimum": 0, "maximum": 100 },
            "4xx_rate_percent": { "type": "number", "minimum": 0, "maximum": 100 }
          }
        }
      }
    },
    "endpoints_measured": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "endpoint": { "type": "string" },
          "method": { "type": "string" },
          "average_response_ms": { "type": "number" },
          "p95_response_ms": { "type": "number" },
          "requests_count": { "type": "integer" },
          "error_rate": { "type": "number" }
        }
      }
    },
    "sla_comparison": {
      "type": "object",
      "properties": {
        "response_time_sla_ms": { "type": "number" },
        "response_time_met": { "type": "boolean" },
        "availability_sla_percent": { "type": "number" },
        "availability_met": { "type": "boolean" },
        "throughput_sla": { "type": "number" },
        "throughput_met": { "type": "boolean" }
      }
    },
    "notes": { "type": "string" }
  }
}
