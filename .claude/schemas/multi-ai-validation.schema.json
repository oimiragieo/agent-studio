{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Multi-AI Validation Report",
  "description": "Schema for multi-AI validation results from automated-enterprise-flow",
  "required": ["validation_id", "validation_date", "validators_used", "consensus_status", "consensus_issues"],
  "properties": {
    "validation_id": { "type": "string", "description": "Unique identifier for validation" },
    "validation_date": { "type": "string", "format": "date-time" },
    "validators_used": {
      "type": "array",
      "items": { "type": "string", "enum": ["cursor", "gemini", "codex", "claude", "gpt4", "other"] }
    },
    "consensus_status": {
      "type": "string",
      "enum": ["all_pass", "majority_pass", "majority_fail", "all_fail", "no_consensus"],
      "description": "Overall consensus status across validators"
    },
    "consensus_threshold": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Threshold for consensus (e.g., 0.66 = 2/3 agreement)"
    },
    "individual_results": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["validator", "status", "score"],
        "properties": {
          "validator": { "type": "string" },
          "status": { "type": "string", "enum": ["pass", "fail", "error", "timeout"] },
          "score": { "type": "number", "minimum": 0, "maximum": 100 },
          "issues_found": { "type": "integer", "minimum": 0 },
          "execution_time_ms": { "type": "number" },
          "details": {
            "type": "object",
            "properties": {
              "code_quality": { "type": "number", "minimum": 0, "maximum": 100 },
              "security": { "type": "number", "minimum": 0, "maximum": 100 },
              "performance": { "type": "number", "minimum": 0, "maximum": 100 },
              "best_practices": { "type": "number", "minimum": 0, "maximum": 100 }
            }
          },
          "findings": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "issue": { "type": "string" },
                "severity": { "type": "string", "enum": ["critical", "high", "medium", "low"] },
                "file": { "type": "string" },
                "line": { "type": "integer" },
                "recommendation": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "consensus_issues": {
      "type": "array",
      "description": "Issues agreed upon by multiple validators",
      "items": {
        "type": "object",
        "required": ["issue", "severity", "agreement_count"],
        "properties": {
          "issue": { "type": "string" },
          "severity": { "type": "string", "enum": ["critical", "high", "medium", "low"] },
          "category": { "type": "string", "enum": ["security", "performance", "code_quality", "design", "testing", "documentation"] },
          "agreement_count": { "type": "integer", "description": "Number of validators that identified this issue" },
          "validators_agreed": { "type": "array", "items": { "type": "string" } },
          "file": { "type": "string" },
          "line": { "type": "integer" },
          "recommendation": { "type": "string" },
          "auto_fixable": { "type": "boolean" }
        }
      }
    },
    "disagreements": {
      "type": "array",
      "description": "Issues where validators disagreed",
      "items": {
        "type": "object",
        "properties": {
          "topic": { "type": "string" },
          "positions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "validator": { "type": "string" },
                "position": { "type": "string" },
                "reasoning": { "type": "string" }
              }
            }
          },
          "resolution_needed": { "type": "boolean" },
          "recommended_action": { "type": "string" }
        }
      }
    },
    "summary": {
      "type": "object",
      "properties": {
        "total_issues": { "type": "integer", "minimum": 0 },
        "critical_issues": { "type": "integer", "minimum": 0 },
        "high_issues": { "type": "integer", "minimum": 0 },
        "medium_issues": { "type": "integer", "minimum": 0 },
        "low_issues": { "type": "integer", "minimum": 0 },
        "auto_fixable_count": { "type": "integer", "minimum": 0 },
        "average_score": { "type": "number", "minimum": 0, "maximum": 100 }
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "recommendation": { "type": "string" },
          "priority": { "type": "string", "enum": ["P0", "P1", "P2", "P3"] },
          "source": { "type": "string", "description": "Which validator(s) recommended this" }
        }
      }
    }
  }
}
