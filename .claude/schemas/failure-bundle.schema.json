{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Failure Bundle (trace-linked)",
  "type": "object",
  "required": ["schema_version", "bundle_id", "triggered_at", "failure_type", "tails", "refs"],
  "properties": {
    "$schema": { "type": ["string", "null"] },
    "schema_version": { "type": "number" },
    "bundle_id": { "type": "string" },
    "triggered_at": { "type": "string", "format": "date-time" },
    "failure_type": { "type": "string" },
    "trace_id": { "type": ["string", "null"] },
    "trigger_span_id": { "type": ["string", "null"] },
    "run_id": { "type": ["string", "null"] },
    "session_key": { "type": ["string", "null"] },
    "trigger_event": { "type": ["object", "null"], "additionalProperties": true },
    "refs": { "type": "object", "additionalProperties": true },
    "state_snapshot": { "type": ["object", "null"], "additionalProperties": true },
    "tails": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": true
}
