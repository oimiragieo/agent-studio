{
  "$schema": "../schemas/adapter-registry.schema.json",
  "version": "1.0.0",
  "description": "Registry of platform adapters for cross-platform workflow translation",
  "adapters": {
    "claude": {
      "file": "claude-adapter.mjs",
      "class": "ClaudeAdapter",
      "native": true,
      "description": "Native Claude Code adapter with full workflow support",
      "capabilities": {
        "workflows": "full",
        "skills": "full",
        "subagents": "full",
        "plan_mode": "full",
        "validation_gates": "full",
        "parallel_execution": "full"
      },
      "cuj_support": "62/62",
      "recommended_for": [
        "Complex multi-agent workflows",
        "Skill-intensive tasks",
        "Automated validation pipelines",
        "Enterprise deployments"
      ]
    },
    "cursor": {
      "file": "cursor-adapter.mjs",
      "class": "CursorAdapter",
      "native": false,
      "description": "Cursor IDE adapter with Plan Mode translation",
      "capabilities": {
        "workflows": "translated",
        "skills": "converted",
        "subagents": "partial",
        "plan_mode": "full",
        "validation_gates": "manual",
        "parallel_execution": "none"
      },
      "cuj_support": "45/62",
      "recommended_for": [
        "IDE-integrated development",
        "Single-agent tasks",
        "Code generation and editing",
        "Quick iterations"
      ],
      "limitations": [
        "Skills converted to prompts - may lose precision",
        "Parallel steps executed sequentially",
        "Validation gates require manual checks"
      ]
    }
  },
  "default": "claude",
  "detection_rules": {
    "claude": {
      "env_vars": ["CLAUDE_CODE", "ANTHROPIC_API_KEY"],
      "files": [".claude/CLAUDE.md", ".claude/config.yaml"],
      "priority": 1
    },
    "cursor": {
      "env_vars": ["CURSOR_SESSION"],
      "files": [".cursor/settings.json", ".cursorrules"],
      "priority": 2
    }
  },
  "translation_matrix": {
    "claude_to_cursor": {
      "difficulty": "moderate",
      "automation": "high",
      "fidelity": "good"
    },
    "cursor_to_claude": {
      "difficulty": "easy",
      "automation": "high",
      "fidelity": "excellent"
    }
  }
}
