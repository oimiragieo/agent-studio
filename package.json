{
  "name": "agent-studio",
  "version": "2.0.0",
  "description": "Multi-platform agent configuration bundle for Claude Code, Cursor IDE, and Factory Droid",
  "type": "module",
  "private": true,
  "scripts": {
    "precommit": "node .claude/hooks/pre-commit-cleanup.mjs",
    "cleanup": "node .claude/tools/cleanup-repo.mjs --execute --yes",
    "cleanup:check": "node .claude/tools/cleanup-repo.mjs --dry-run",
    "format": "node scripts/format-tracked.mjs --write",
    "format:check": "node scripts/format-tracked.mjs --check",
    "agent:production": "node --max-old-space-size=8192 --expose-gc --optimize_for_size --gc_interval=100",
    "agent:worker": "node --max-old-space-size=4096 --expose-gc --optimize_for_size",
    "validate": "node --max-old-space-size=4096 --expose-gc scripts/validate-config.mjs && node --max-old-space-size=4096 --expose-gc scripts/validate-model-names.mjs",
    "validate:full": "pnpm validate && node --max-old-space-size=4096 --expose-gc scripts/validate-workflow.mjs && node --max-old-space-size=4096 --expose-gc scripts/validate-all-references.mjs && pnpm validate:cujs && pnpm validate:index && pnpm index-rules",
    "validate:verbose": "node --max-old-space-size=4096 --expose-gc scripts/validate-config.mjs --verbose && node --max-old-space-size=4096 --expose-gc scripts/validate-model-names.mjs --verbose",
    "validate:sync": "bash scripts/validate-sync.sh",
    "validate:models": "node --max-old-space-size=4096 --expose-gc scripts/validate-model-names.mjs",
    "validate:workflow": "node --max-old-space-size=4096 --expose-gc scripts/validate-workflow.mjs",
    "validate:references": "node --max-old-space-size=4096 --expose-gc scripts/validate-all-references.mjs",
    "validate:cujs": "node --max-old-space-size=4096 --expose-gc .claude/tools/cuj-validator-unified.mjs --doctor",
    "validate:cuj": "node --max-old-space-size=4096 --expose-gc .claude/tools/cuj-validator-unified.mjs",
    "validate:cujs:e2e": "node --max-old-space-size=4096 --expose-gc .claude/tools/cuj-validator-unified.mjs --mode full",
    "validate:cujs:dry-run": "node --max-old-space-size=4096 --expose-gc .claude/tools/cuj-validator-unified.mjs --mode dry-run",
    "validate:index": "node scripts/validate-index.mjs",
    "validate:index-version": "node scripts/validate-rule-index-paths.mjs --check-version",
    "validate:index-paths": "node scripts/validate-rule-index-paths.mjs",
    "validate:all": "pnpm validate:full",
    "test:version-validation": "node scripts/test-version-validation.mjs",
    "install-agents": "node scripts/install.mjs",
    "index-rules": "node scripts/generate-rule-index.mjs",
    "index-rules:prebuilt": "node scripts/generate-prebuilt-rule-index.mjs",
    "sync-cuj-registry": "node --max-old-space-size=4096 --expose-gc .claude/tools/sync-cuj-registry.mjs",
    "sync-cuj-registry:validate": "node --max-old-space-size=4096 --expose-gc .claude/tools/sync-cuj-registry.mjs --validate-only",
    "cuj": "node --max-old-space-size=4096 --expose-gc .claude/tools/run-cuj.mjs",
    "cuj:list": "node --max-old-space-size=4096 --expose-gc .claude/tools/run-cuj.mjs --list",
    "cuj:simulate": "node --max-old-space-size=4096 --expose-gc .claude/tools/run-cuj.mjs --simulate",
    "cuj:validate": "node --max-old-space-size=4096 --expose-gc .claude/tools/run-cuj.mjs --validate",
    "cuj:doctor": "node --max-old-space-size=4096 --expose-gc .claude/tools/cuj-validator-unified.mjs --mode doctor",
    "cuj:doctor:json": "node --max-old-space-size=4096 --expose-gc .claude/tools/cuj-validator-unified.mjs --mode doctor --format json",
    "validate:workflow-gates": "node --max-old-space-size=4096 --expose-gc .claude/tools/validate-workflow-rating-gates.mjs",
    "test:codex-integration": "node .claude/tools/test-codex-skills-integration.mjs",
    "test:codex-integration:mock": "node .claude/tools/test-codex-skills-integration.mjs --mock",
    "test": "node --test --test-concurrency=1 tests/*.test.mjs",
    "test:unit": "node --test --test-concurrency=1 tests/validate-cujs.test.mjs tests/validate-skills.test.mjs tests/run-cuj.test.mjs tests/cuj-measurability.test.mjs",
    "test:integration": "node --test tests/integration/*.test.mjs",
    "test:tools": "node --test --test-concurrency=1 .claude/tools/*.test.mjs .claude/tools/tests/*.test.mjs",
    "test:all": "pnpm test:unit && pnpm test:integration && pnpm test:tools",
    "test:ci": "node --test --test-concurrency=1 --test-reporter=spec tests/*.test.mjs tests/integration/*.test.mjs",
    "test:coverage": "node --test --test-concurrency=1 --experimental-test-coverage tests/*.test.mjs"
  },
  "keywords": [
    "claude",
    "cursor",
    "factory",
    "ai",
    "agents",
    "llm",
    "rules"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "ajv-formats": "^3.0.1",
    "better-sqlite3": "11.10.0",
    "glob": "^13.0.0",
    "hnswlib-node": "^3.0.0",
    "openai": "^4.70.0",
    "ws": "^8.14.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "ajv": "^8.12.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.7.4",
    "stream-chain": "^2.2.5",
    "stream-json": "^1.8.0"
  }
}
