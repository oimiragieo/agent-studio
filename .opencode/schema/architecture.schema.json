{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "System Architecture",
  "description": "Schema for architecture documents generated by Architect agent",
  "required": ["title", "version", "system_overview", "components"],
  "properties": {
    "title": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "deprecated"]
    },
    "system_overview": {
      "type": "object",
      "required": ["description", "architecture_style"],
      "properties": {
        "description": {
          "type": "string"
        },
        "architecture_style": {
          "type": "string",
          "enum": ["monolith", "microservices", "serverless", "event-driven", "hybrid"]
        },
        "key_principles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type", "responsibility"],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["frontend", "backend", "database", "cache", "queue", "storage", "external"]
          },
          "responsibility": {
            "type": "string"
          },
          "technology": {
            "type": "string"
          },
          "interfaces": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "protocol": { "type": "string" },
                "endpoint": { "type": "string" }
              }
            }
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "data_model": {
      "type": "object",
      "properties": {
        "entities": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" },
              "attributes": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "type": { "type": "string" },
                    "required": { "type": "boolean" }
                  }
                }
              },
              "relationships": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "target": { "type": "string" },
                    "type": { "type": "string" },
                    "cardinality": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "api_design": {
      "type": "object",
      "properties": {
        "style": {
          "type": "string",
          "enum": ["REST", "GraphQL", "gRPC", "WebSocket"]
        },
        "versioning": {
          "type": "string"
        },
        "authentication": {
          "type": "string"
        },
        "endpoints": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": { "type": "string" },
              "method": { "type": "string" },
              "description": { "type": "string" },
              "request": { "type": "object" },
              "response": { "type": "object" }
            }
          }
        }
      }
    },
    "security": {
      "type": "object",
      "properties": {
        "authentication": { "type": "string" },
        "authorization": { "type": "string" },
        "encryption": { "type": "string" },
        "compliance": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "deployment": {
      "type": "object",
      "properties": {
        "infrastructure": { "type": "string" },
        "environments": {
          "type": "array",
          "items": { "type": "string" }
        },
        "ci_cd": { "type": "string" },
        "monitoring": { "type": "string" }
      }
    },
    "technology_decisions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "decision": { "type": "string" },
          "rationale": { "type": "string" },
          "alternatives_considered": {
            "type": "array",
            "items": { "type": "string" }
          },
          "trade_offs": { "type": "string" }
        }
      }
    }
  }
}
