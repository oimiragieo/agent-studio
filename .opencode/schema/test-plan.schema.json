{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Test Plan",
  "description": "Schema for test plan artifacts generated by QA agent",
  "required": ["title", "version", "scope", "test_strategy"],
  "properties": {
    "title": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "in_progress", "completed"]
    },
    "scope": {
      "type": "object",
      "required": ["in_scope", "out_of_scope"],
      "properties": {
        "in_scope": {
          "type": "array",
          "items": { "type": "string" }
        },
        "out_of_scope": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "test_strategy": {
      "type": "object",
      "properties": {
        "approach": {
          "type": "string"
        },
        "test_levels": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "unit",
              "integration",
              "system",
              "acceptance",
              "e2e",
              "performance",
              "security"
            ]
          }
        },
        "coverage_targets": {
          "type": "object",
          "properties": {
            "unit": { "type": "number", "minimum": 0, "maximum": 100 },
            "integration": { "type": "number", "minimum": 0, "maximum": 100 },
            "e2e": { "type": "number", "minimum": 0, "maximum": 100 }
          }
        }
      }
    },
    "entry_criteria": {
      "type": "array",
      "items": { "type": "string" }
    },
    "exit_criteria": {
      "type": "array",
      "items": { "type": "string" }
    },
    "test_cases": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "type", "steps", "expected_result"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^TC-\\d+$"
          },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["functional", "integration", "e2e", "performance", "security", "accessibility"]
          },
          "priority": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "preconditions": {
            "type": "array",
            "items": { "type": "string" }
          },
          "steps": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "expected_result": { "type": "string" },
          "test_data": {
            "type": "object"
          },
          "automation_status": {
            "type": "string",
            "enum": ["not_started", "in_progress", "automated", "manual_only"]
          }
        }
      }
    },
    "test_environments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "url": { "type": "string" },
          "purpose": { "type": "string" },
          "configuration": { "type": "object" }
        }
      }
    },
    "risk_analysis": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "risk": { "type": "string" },
          "impact": { "type": "string" },
          "probability": { "type": "string" },
          "mitigation": { "type": "string" }
        }
      }
    },
    "schedule": {
      "type": "object",
      "properties": {
        "start_date": { "type": "string", "format": "date" },
        "end_date": { "type": "string", "format": "date" },
        "milestones": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "date": { "type": "string", "format": "date" }
            }
          }
        }
      }
    }
  }
}
