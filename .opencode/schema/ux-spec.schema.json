{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "UX Specification",
  "description": "Schema for UX/UI specification documents",
  "required": ["title", "version", "design_system", "screens"],
  "properties": {
    "title": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "deprecated"]
    },
    "design_system": {
      "type": "object",
      "properties": {
        "colors": {
          "type": "object",
          "properties": {
            "primary": { "type": "string" },
            "secondary": { "type": "string" },
            "accent": { "type": "string" },
            "background": { "type": "string" },
            "text": { "type": "string" },
            "error": { "type": "string" },
            "success": { "type": "string" },
            "warning": { "type": "string" }
          }
        },
        "typography": {
          "type": "object",
          "properties": {
            "font_family": { "type": "string" },
            "heading_sizes": { "type": "object" },
            "body_sizes": { "type": "object" }
          }
        },
        "spacing": {
          "type": "object",
          "properties": {
            "unit": { "type": "number" },
            "scale": {
              "type": "array",
              "items": { "type": "number" }
            }
          }
        },
        "breakpoints": {
          "type": "object",
          "properties": {
            "mobile": { "type": "string" },
            "tablet": { "type": "string" },
            "desktop": { "type": "string" },
            "wide": { "type": "string" }
          }
        }
      }
    },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "variants": {
            "type": "array",
            "items": { "type": "string" }
          },
          "props": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string" },
                "required": { "type": "boolean" },
                "default": { "type": "string" }
              }
            }
          },
          "accessibility": {
            "type": "object",
            "properties": {
              "aria_label": { "type": "string" },
              "keyboard_nav": { "type": "boolean" },
              "screen_reader": { "type": "string" }
            }
          }
        }
      }
    },
    "screens": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "route", "description"],
        "properties": {
          "name": { "type": "string" },
          "route": { "type": "string" },
          "description": { "type": "string" },
          "wireframe_link": { "type": "string", "format": "uri" },
          "mockup_link": { "type": "string", "format": "uri" },
          "components_used": {
            "type": "array",
            "items": { "type": "string" }
          },
          "interactions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "trigger": { "type": "string" },
                "action": { "type": "string" },
                "result": { "type": "string" }
              }
            }
          },
          "states": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "user_flows": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "screen": { "type": "string" },
                "action": { "type": "string" },
                "next": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "accessibility": {
      "type": "object",
      "properties": {
        "wcag_level": {
          "type": "string",
          "enum": ["A", "AA", "AAA"]
        },
        "requirements": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
