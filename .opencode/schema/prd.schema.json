{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Product Requirements Document",
  "description": "Schema for PRD artifacts generated by PM agent",
  "required": ["title", "version", "overview", "goals", "user_stories"],
  "properties": {
    "title": {
      "type": "string",
      "description": "PRD title"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version number"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "deprecated"]
    },
    "overview": {
      "type": "object",
      "required": ["product_name", "description", "target_users"],
      "properties": {
        "product_name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "target_users": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "value_proposition": {
          "type": "string"
        }
      }
    },
    "goals": {
      "type": "object",
      "required": ["business_goals", "user_goals"],
      "properties": {
        "business_goals": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "user_goals": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "success_metrics": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "metric": { "type": "string" },
              "target": { "type": "string" },
              "measurement_method": { "type": "string" }
            }
          }
        }
      }
    },
    "user_stories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "as_a", "i_want", "so_that", "acceptance_criteria"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^US-\\d+$"
          },
          "as_a": {
            "type": "string"
          },
          "i_want": {
            "type": "string"
          },
          "so_that": {
            "type": "string"
          },
          "acceptance_criteria": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          "priority": {
            "type": "string",
            "enum": ["must-have", "should-have", "could-have", "wont-have"]
          },
          "story_points": {
            "type": "integer",
            "minimum": 1
          }
        }
      }
    },
    "functional_requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "description": { "type": "string" },
          "priority": { "type": "string" },
          "dependencies": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "non_functional_requirements": {
      "type": "object",
      "properties": {
        "performance": { "type": "array", "items": { "type": "string" } },
        "security": { "type": "array", "items": { "type": "string" } },
        "scalability": { "type": "array", "items": { "type": "string" } },
        "accessibility": { "type": "array", "items": { "type": "string" } },
        "compliance": { "type": "array", "items": { "type": "string" } }
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "assumptions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "timeline": {
      "type": "object",
      "properties": {
        "phases": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "duration": { "type": "string" },
              "deliverables": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}
