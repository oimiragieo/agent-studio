{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Artifact Manifest",
  "description": "Schema for developer artifact manifests",
  "required": ["summary"],
  "properties": {
    "files_created": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of file paths created"
    },
    "files_modified": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of file paths modified"
    },
    "directories_created": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of directory paths created"
    },
    "summary": {
      "type": "string",
      "description": "Brief summary of changes made"
    },
    "dependencies_added": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "New dependencies or imports added"
    },
    "tests_added": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Test files created or modified"
    }
  }
}
